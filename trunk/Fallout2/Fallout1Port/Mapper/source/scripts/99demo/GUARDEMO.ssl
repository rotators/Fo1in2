	else begin
		if (rndx == 2) then begin
			float_msg(self_obj, message_str(SCRIPT_GUARDEMO, 102), 0);
		end
		else begin
			if (rndx == 3) then begin
				float_msg(self_obj, message_str(SCRIPT_GUARDEMO, 103), 0);
			end
		end
	end
end

