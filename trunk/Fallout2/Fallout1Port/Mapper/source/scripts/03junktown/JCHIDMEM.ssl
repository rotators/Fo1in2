procedure child_pois
begin
	if (get_critter_stat(dude_obj, STAT_current_poison) != 0) then begin
		game_time_advance(game_ticks(1800));
	end
	poison(dude_obj, -get_critter_stat(dude_obj, STAT_current_poison));
end

