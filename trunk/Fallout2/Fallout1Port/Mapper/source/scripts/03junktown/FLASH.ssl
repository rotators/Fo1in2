procedure Flash00N begin
	set_local_var(0, 1);
	gsay_reply(36, 101);
	giq_option( 4, SCRIPT_FLASH, 102, Flash01N, NEUTRAL_REACTION );
	giq_option( 4, SCRIPT_FLASH, 103, Flash10N, NEUTRAL_REACTION );
	giq_option( 5, SCRIPT_FLASH, 104, Flash00Na, NEUTRAL_REACTION );
	giq_option( 4, SCRIPT_FLASH, 128, Flash11N, NEUTRAL_REACTION );
	giq_option( -3, SCRIPT_FLASH, 105, Flash10N, NEUTRAL_REACTION );
end

procedure Flash00Na begin
	variable LVar0 := 0;
	variable LVar1 := 0;
	variable LVar2 := 0;
	LVar1 := dude_max_hp;
	LVar2 := dude_cur_hp;
	if (LVar2 == LVar1) then begin
		call Flash01N;
	end
	else begin
		LVar0 := -20;
		if (LVar2 < 5) then begin
			LVar0 := 0;
		end
		if (is_success(roll_vs_skill(dude_obj, SKILL_SPEECH, LVar0))) then begin
			call Flash02N;
		end
		else begin
			call Flash01N;
		end
	end
end

