procedure critter_p_proc
begin
	if (global_var( GVAR_DUDE_ENEMY_JUNK_CITIZEN ) == 1) then begin//  GVAR_ENEMY_JUNK_CITIZEN == 1
		if (obj_can_see_obj(self_obj, dude_obj)) then begin
			attack(dude_obj);
		end
	end
	if (map_var(9) == 1) then begin// was "if (smartass2)"
		call Lenore00;
	end
	if (map_var(5) == 0) then begin// was "if not(dog_is_angry)"
		animate_move_obj_to_tile(self_obj, home_tile, 0);// was "call go_inside"
	end
end

procedure destroy_p_proc
begin

	if (source_obj == dude_obj) then begin
		set_global_var( GVAR_DUDE_ENEMY_JUNK_CITIZEN, 1 );// GVAR_ENEMY_JUNK_CITIZEN
		set_global_var(ENEMY_JUNKTOWN, 1);
	end
