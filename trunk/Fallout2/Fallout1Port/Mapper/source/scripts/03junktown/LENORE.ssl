begin
	set_local_var(4, 1);
	if (global_var(DOGMEAT_HIRELING_STATUS)) then begin
		call Lenore02;
	end
	else begin
		if (not(map_var(5))) then begin// was "not(dog_is_angry)"
			call Lenore04;
		end
		else begin
			if (dude_is_armed) then begin
				call Lenore01;
			end
			else begin
				call Lenore03;
			end
		end
	end
end

