end

procedure destroy_p_proc begin
	if source_obj == dude_obj then begin
		set_global_var(ENEMY_GIZMOS_GANG, 1);
	end
	inc_evil_critter
	set_global_var(GIZMO_DEAD, 1);
end

procedure look_at_p_proc begin
	if (local_var(10) != 1) then begin
		set_local_var(10, 1);
