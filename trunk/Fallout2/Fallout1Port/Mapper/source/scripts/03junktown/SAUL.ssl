		LVar0 := create_object_sid(PID_SPIKED_KNUCKLES, 0, 0, -1);
		add_obj_to_inven(self_obj, LVar0);
		kill_critter(self_obj, 48);
	end
	sleeping_disabled := 0;
	sleep_time := 2000;
	wake_time := 700;
	if (cur_map_index == 11) then begin //  JUNKTOWN - CASINO, GIZMO, SKUM PITT, BOXING, DOGMEAT
		sleep_tile := 7000;
