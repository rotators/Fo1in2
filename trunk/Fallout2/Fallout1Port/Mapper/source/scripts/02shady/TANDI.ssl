procedure talk_p_proc begin
	anim(dude_obj, 1000, rotation_to_tile(tile_num(dude_obj), tile_num(self_obj)));
	CurrentMapNum := cur_map_index;
	if (CurrentMapNum == 24) then begin//	RAIDERS.MAP
		if (global_var(TANDI_HIRELING_STATUS) == 5) then begin
			float_msg(self_obj, message_str(SCRIPT_TANDI, 208), 2);
		end
		else begin
			GetReaction;
			start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_RAIDERS);
			gsay_start;
			if (global_var(TANDI_HEREBEFORE_RAIDERS) == 1) then begin
				set_global_var(TANDI_TALKED_ABOUT, 1);
				call tandi43;
			end
			else begin
				set_global_var(TANDI_HEREBEFORE_RAIDERS, 1);
				call tandi37;
			end
			gsay_end;
			end_dialogue;
		end
	end
	else begin
		if ((CurrentMapNum == 26) or (CurrentMapNum == 25)) then begin//	SHADY SANDS
			GetReaction;
			start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_SHADY);
			gsay_start;
			if (global_var(TANDI_HEREBEFORE_RAIDERS) == 1) then begin
				if (global_var(TANDI_HIRELING_STATUS) == 0) then begin
					if (get_critter_stat(dude_obj, STAT_iq) < 4) then begin
						call tandi06;
					end
					else begin
						call tandi30;
					end
				end
				else begin
					call tandi36;
				end
			end
			else begin
				set_global_var(TANDI_HEREBEFORE_RAIDERS, 1);
				if (global_var(TANDI_HIRELING_STATUS) == 0) then begin
					call tandi01;
				end
				else begin
					call tandi36;
				end
			end
			gsay_end;
			end_dialogue;
		end
		else begin
			GetReaction;
			if ((CurrentMapNum == 0) or (CurrentMapNum == 1) or (CurrentMapNum == 2)) then begin
				start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND1);//was 14, DESERT
			end
			else begin
				if ((CurrentMapNum == 10) or (CurrentMapNum == 11) or (CurrentMapNum == 12)) then begin
					start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_JUNKTOWN);//JUNKTOWN
				end
				else begin
					if ((CurrentMapNum == 13) or (CurrentMapNum == 14) or (CurrentMapNum == 15)) then begin
						start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_BHOOD);//BROTHERHOOD
					end
					else begin
						if ((CurrentMapNum == 3) or (CurrentMapNum == 4) or (CurrentMapNum == 5)) then begin
							start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_NECROPOLIS);//NECROPOLIS
						end
						else begin
							if ((CurrentMapNum == 6)) then begin
								start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_VAULT);//VAULT13
							end
							else begin
								if ((CurrentMapNum == 7)) then begin
									if random(0,1) then begin
										start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND1);//VAULTENT (15)
									end
									else begin
										start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_JUNKTOWN);//VAULTENT (15)
									end
								end
								else begin
									if ((CurrentMapNum == 8) or (CurrentMapNum == 9)) then begin
										start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_VAULT);//start_gdialog(57, self_obj, 4, 9, 16);//VAULT_DEAD, need exception for tile27000+
									end
									else begin
										if ((CurrentMapNum == 16) or (CurrentMapNum == 35) or (CurrentMapNum == 37)) then begin
											start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND_VAULT);//start_gdialog(57, self_obj, 4, 9, 15);//BLUE _CAVES_
										end
										else begin
											start_gdialog(NAME, self_obj, 4, HEAD_TANDI, BACKGROUND1);
										end
									end
								end
							end
						end
					end
				end
			end
			gsay_start;
			call Tandi98;
			gsay_end;
			end_dialogue;
			float_msg(self_obj, message_str(SCRIPT_TANDI, random(300, 305)), -1);
		end
	end
end

