procedure start
begin
	if (global_var(SHADY_SANDS_WAS_INVADED) == 1) and (global_var(TANDI_HIRELING_STATUS) != 5) then begin
		if (cur_map_index == MAP_SHADYE) or (cur_map_index == MAP_SHADYW) then begin //  SHADY SANDS - EAST OR WEST
			if (local_var(9) != 1) then begin
				set_local_var(9, 1);
				call PickDeadBodyType;
				kill_critter(self_obj, DeathType);
			end
		end
	end
	else begin
		if Only_Once then begin
			Only_Once := 0;
			if (cur_map_index == MAP_SHADYE) or (cur_map_index == MAP_SHADYW) then begin
				/* TEAM_NUM */  critter_add_trait(self_obj, 1, 6, 2);
			end
			else begin
				/* TEAM_NUM */  critter_add_trait(self_obj, 1, 6, 0);
			end
			/* AI_PACKET */  critter_add_trait(self_obj, 1, 5, 2);
		end
		if (script_action == 15) then begin//map_enter_p_proc (or "map_init") called when entering from World Map, on green "exit" grids, SOME ladders, doesn't appear to call on elevators or manholes
			call map_enter_p_proc;
		end
		else begin
			if (script_action == 23) then begin//map_update_p_proc -- called every dozen seconds or so, & additionally on certain events (exit dialog, end combat, load map, etc)
				call map_update_p_proc;
			end
			else begin
				if (script_action == 11) then begin//<--- talk_p_proc (Face icon), can also call "do_dialogue" or "do_dialog"
					call talk_p_proc;
				end
				else begin
					if ((script_action == 21) or (script_action == 3)) then begin// 21 is look_at, 3 is description (Binoculars)   //NEED TO FIX THIS, DUPLICATE DESCRIPTIONS IS BULLSHIT. --Sduibek
						script_overrides;
						display_msg(message_str(SCRIPT_TANDI, 100));
					end
					else begin
						if (script_action == 12) then begin//<-- critter_p_proc - (can also be "Critter_Action") - do they see you, should they wander, should they attack you, etc..
							call critter_p_proc;
						end
						else begin
							if (script_action == 18) then begin//destroy_p_proc - Object or Critter has been killed or otherwise eradicated. Fall down go boom.
								call destroy_p_proc;
							end
							else begin
								if (script_action == 14) then begin//<-- damage_p_proc - has this Critter or Object been shot, hit with TNT, punched, etc.
									call damage_p_proc;
								end
								else begin
									if (script_action == 4) then begin//<---caught stealing! (pickup_p_proc)
										tmp_hostile := 1;
									end
								end
							end
						end
					end
				end
			end
		end
	end
end

procedure destroy_p_proc
begin
	if global_var(TANDI_HIRELING_STATUS) == 5 then begin
		party_remove(self_obj);
		party_remove(Tandi_ptr);
	end
	if source_obj > 0 then begin  SrcObj := 0;  SrcIsParty := 0;  SrcObj := obj_pid(source_obj);  if party_member_obj(SrcObj) then begin  SrcIsParty := 1;  end  end    if (source_obj == dude_obj) or (SrcIsParty == 1) then begin
		set_global_var(ENEMY_SHADY_SANDS, 1);//Set ENEMY_SHADY_SANDS to True
	end
	set_global_var(TANDI_HIRELING_STATUS, 3);

	if source_obj == dude_obj then begin
		set_global_var(NUM_GOOD_MONSTERS_KILLED, global_var(NUM_GOOD_MONSTERS_KILLED) + 1);// THIS MONSTER WAS A GOOD GUY. INCREASE GoodGuysKilled COUNTER
		if (((global_var(NUM_BAD_MONSTERS_KILLED) + global_var(NUM_GOOD_MONSTERS_KILLED)) >= 25) and ((global_var(NUM_GOOD_MONSTERS_KILLED) > (2 * global_var(NUM_BAD_MONSTERS_KILLED))) or (global_var(BERSERKER_REPUTATION) == 1))) then begin
			set_global_var(BERSERKER_REPUTATION, 1);
			set_global_var(CHAMPION_REPUTATION, 0);
		end
		if (((global_var(NUM_BAD_MONSTERS_KILLED) + global_var(NUM_GOOD_MONSTERS_KILLED)) >= 25) and ((global_var(NUM_BAD_MONSTERS_KILLED) > (3 * global_var(NUM_GOOD_MONSTERS_KILLED))) or (global_var(CHAMPION_REPUTATION) == 1))) then begin
			set_global_var(CHAMPION_REPUTATION, 1);
			set_global_var(BERSERKER_REPUTATION, 0);
		end
		if ((global_var(NUM_GOOD_MONSTERS_KILLED) % 2) == 0) then begin
			set_global_var(PLAYER_REPUTATION_GENERAL, (global_var(PLAYER_REPUTATION_GENERAL) - 1));
		end
	end
	Tandi_ptr := 0;
end

procedure talk_p_proc
begin
	anim(dude_obj, 1000, rotation_to_tile(tile_num(dude_obj), tile_num(self_obj)));
	CurrentMapNum := cur_map_index;
	if (CurrentMapNum == 24) then begin//	RAIDERS.MAP
		if (global_var(TANDI_HIRELING_STATUS) == 5) then begin
			float_msg(self_obj, message_str(SCRIPT_TANDI, 208), 2);
		end
		else begin
			call get_reaction;
			start_gdialog(57, self_obj, 4, 9, 13);
			gsay_start;
			if (global_var(TANDI_HEREBEFORE_RAIDERS) == 1) then begin
				set_global_var(TANDI_TALKED_ABOUT, 1);
				call tandi43;
			end
			else begin
				set_global_var(TANDI_HEREBEFORE_RAIDERS, 1);
				call tandi37;
			end
			gsay_end;
			end_dialogue;
		end
	end
	else begin
		if ((CurrentMapNum == 26) or (CurrentMapNum == 25)) then begin//	SHADY SANDS
			call get_reaction;
			start_gdialog(57, self_obj, 4, 9, 9);
			gsay_start;
			if (global_var(TANDI_HEREBEFORE_RAIDERS) == 1) then begin
				if (global_var(TANDI_HIRELING_STATUS) == 0) then begin
					if (get_critter_stat(dude_obj, 4) < 4) then begin
						call tandi06;
					end
					else begin
						call tandi30;
					end
				end
				else begin
					call tandi36;
				end
			end
			else begin
				set_global_var(TANDI_HEREBEFORE_RAIDERS, 1);
				if (global_var(TANDI_HIRELING_STATUS) == 0) then begin
					call tandi01;
				end
				else begin
					call tandi36;
				end
			end
			gsay_end;
			end_dialogue;
		end
		else begin
			call get_reaction;
			if ((CurrentMapNum == 0) or (CurrentMapNum == 1) or (CurrentMapNum == 2)) then begin
				start_gdialog(57, self_obj, 4, 9, 2);//was 14, DESERT
			end
			else begin
				if ((CurrentMapNum == 10) or (CurrentMapNum == 11) or (CurrentMapNum == 12)) then begin
					start_gdialog(57, self_obj, 4, 9, 7);//JUNKTOWN
				end
				else begin
					if ((CurrentMapNum == 13) or (CurrentMapNum == 14) or (CurrentMapNum == 15)) then begin
						start_gdialog(57, self_obj, 4, 9, 5);//BROTHERHOOD
					end
					else begin
						if ((CurrentMapNum == 3) or (CurrentMapNum == 4) or (CurrentMapNum == 5)) then begin
							start_gdialog(57, self_obj, 4, 9, 4);//NECROPOLIS
						end
						else begin
							if ((CurrentMapNum == 6)) then begin
								start_gdialog(57, self_obj, 4, 9, 10);//VAULT13
							end
							else begin
								if ((CurrentMapNum == 7)) then begin
									if random(0,1) then begin
										start_gdialog(57, self_obj, 4, 9, 2);//VAULTENT (15)
									end
									else begin
										start_gdialog(57, self_obj, 4, 9, 7);//VAULTENT (15)
									end
								end
								else begin
									if ((CurrentMapNum == 8) or (CurrentMapNum == 9)) then begin
										start_gdialog(57, self_obj, 4, 9, 10);//start_gdialog(57, self_obj, 4, 9, 16);//VAULT_DEAD, need exception for tile27000+
									end
									else begin
										if ((CurrentMapNum == 16) or (CurrentMapNum == 35) or (CurrentMapNum == 37)) then begin
											start_gdialog(57, self_obj, 4, 9, 10);//start_gdialog(57, self_obj, 4, 9, 15);//BLUE _CAVES_
										end
										else begin
											start_gdialog(57, self_obj, 4, 9, 2);
										end
									end
								end
							end
						end
					end
				end
			end
			gsay_start;
			call Tandi98;
			gsay_end;
			end_dialogue;
			float_msg(self_obj, message_str(SCRIPT_TANDI, random(300, 305)), -1);
		end
	end
end

