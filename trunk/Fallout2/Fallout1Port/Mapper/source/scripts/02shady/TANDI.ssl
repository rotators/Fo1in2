				end
				else begin
					if ((global_var(TANDI_HIRELING_STATUS) > 1) and (global_var(TANDI_LOCATION_TRACKER) == 3) and (cur_map_index == MAP_SHADYW)) then begin
						party_remove(self_obj);
						if (metarule(22, 0) == 0) then begin    set_obj_visibility(self_obj, 0);    end//  MAKE VISIBLE
						animate_move_obj_to_tile(self_obj, 16710, 1);
						set_global_var(TANDI_LOCATION_TRACKER, 300);
					end
					else begin
						if ((global_var(TANDI_LOCATION_TRACKER) == 300) and (tile_distance(tile_num(self_obj), 16710) >= 2)) then begin
							animate_move_obj_to_tile(self_obj, 16710, 1);
						end
						else begin
							if ((global_var(TANDI_LOCATION_TRACKER) == 300) and (tile_distance(tile_num(self_obj), 16710) < 2)) then begin
								set_global_var(TANDI_LOCATION_TRACKER, 301);
							end
							else begin
								if ((global_var(TANDI_LOCATION_TRACKER) == 301) and (tile_distance(tile_num(self_obj), 20706) >= 2)) then begin
									animate_move_obj_to_tile(self_obj, 20706, 1);
								end
								else begin
									if ((global_var(TANDI_LOCATION_TRACKER) == 301) and (tile_distance(tile_num(self_obj), 20706) < 2)) then begin
										set_global_var(TANDI_LOCATION_TRACKER, 302);
									end
									else begin
										if ((global_var(TANDI_LOCATION_TRACKER) == 302) and (tile_distance(tile_num(self_obj), 23698) >= 2)) then begin
											animate_move_obj_to_tile(self_obj, 23698, 1);
										end
										else begin
											if ((global_var(TANDI_LOCATION_TRACKER) == 302) and (tile_distance(tile_num(self_obj), 23698) < 2)) then begin
												set_global_var(TANDI_LOCATION_TRACKER, 303);
											end
											else begin
												if ((global_var(TANDI_LOCATION_TRACKER) == 303) and (tile_distance(tile_num(self_obj), 22086) >= 2)) then begin
													animate_move_obj_to_tile(self_obj, 22086, 1);
												end
												else begin
													if ((global_var(TANDI_LOCATION_TRACKER) == 303) and (tile_distance(tile_num(self_obj), 22086) < 2)) then begin
														set_global_var(TANDI_LOCATION_TRACKER, 4);
													end
												end
											end
										end
									end
								end
							end
						end
					end
				end
				if (obj_can_see_obj(self_obj, dude_obj) and (party_member_obj(TANDI_SELF_ID) == 0) and tmp_hostile) then begin
					tmp_hostile := 0;
					attack_complex(dude_obj, 0, 1, 0, 0, 30000, 0, 0);
				end
				if ((party_member_obj(TANDI_SELF_ID) == 0) and (global_var(TANDI_HIRELING_STATUS) != 1) and (global_var(TANDI_LOCATION_TRACKER) != 300)) then begin
					call TandiSchedule;
