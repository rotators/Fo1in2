	dude_look_at_critter;

	get_reaction

	start_gdialog(3, self_obj, 4, -1, -1);
	gsay_start;
	if (Caught_Stealing) then begin
		call BarterGuy00;
	end
	else begin
		if dude_is_armed then begin
			call BarterGuy02;
		end
		else begin
			//call get_stuff_from_safe;
			call BarterGuy01;
		end
	end
	gsay_end;
	end_dialogue;
	//call put_stuff_in_safe;
end

