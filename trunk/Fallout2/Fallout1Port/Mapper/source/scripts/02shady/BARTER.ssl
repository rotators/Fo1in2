	gsay_reply(3, 104);
	giq_option( 4, SCRIPT_BARTER, 105, BarterGuy05, NEUTRAL_REACTION );
	giq_option( 4, SCRIPT_BARTER, 106, BarterGuy04, NEUTRAL_REACTION );
end

