	add_obj_to_inven(LVar0, item);
	LVar0 := create_object_sid(PID_TOWNSWOMAN_2, 20476, 0, SCRIPT_GENSKULZ);
	item := create_object( PID_10MM_PISTOL, 0, 0 );
	add_obj_to_inven(LVar0, item);
	item := create_object( PID_KNIFE, 0, 0 );
	add_obj_to_inven(LVar0, item);
