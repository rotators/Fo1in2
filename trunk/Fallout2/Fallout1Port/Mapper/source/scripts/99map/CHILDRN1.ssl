procedure start
begin
	if (script_action == 15) then begin//map_enter_p_proc (or "map_init") called when entering from World Map, on green "exit" grids, SOME ladders, doesn't appear to call on elevators or manholes
		call Lighting;
		set_global_var(WORLDMAPLIST_CHILDREN, 2);
		if (map_first_run) then begin
			display_msg(message_str(SCRIPT_SHADYWST, 110));
		end
		player_elevation := elevation(dude_obj);
		if (global_var(LOAD_MAP_INDEX) == 0) then begin
			override_map_start(100, 102, 0, 5);
		end
		else begin
			if (global_var(LOAD_MAP_INDEX) == 2) then begin
				override_map_start(100, 86, 0, 2);
			end
			else begin
				if (global_var(LOAD_MAP_INDEX) == 1) then begin
					override_map_start(99, 113, 1, 5);
				end
				else begin
					if (global_var(LOAD_MAP_INDEX) == 3) then begin
						override_map_start(96, 63, 1, 1);
					end
					else begin
						if (global_var(LOAD_MAP_INDEX) == 4) then begin
							override_map_start(85, 63, 1, 4);
						end
						else begin
							override_map_start(100, 102, 0, 5);
						end
					end
				end
			end
		end
		call add_party;
	end
	else begin
		if (script_action == 23) then begin//map_update_p_proc -- called every dozen seconds or so, & additionally on certain events (exit dialog, end combat, load map, etc)
			call Lighting;
			if (elevation(dude_obj) == 1) then begin
				set_global_var(MARK_CHILD_2, 1);
			end
			call update_party;
		end
		else begin
			if (script_action == 16) then begin//map_exit_p_proc (also appears as "remove_party"!) - called on red exit grids
				call remove_party;
			end
		end
	end
end

procedure Lighting
begin
	variable LVar0 := 0;
	LVar0 := game_time_hour;
	if ((LVar0 >= 600) and (LVar0 < 700)) then begin
		set_light_level(LVar0 - 600 + 40);
	end
	else begin
		if ((LVar0 >= 700) and (LVar0 < 1800)) then begin
			set_light_level(100);
		end
		else begin
			if ((LVar0 >= 1800) and (LVar0 < 1900)) then begin
				set_light_level(100 - (LVar0 - 1800));
			end
			else begin
				set_light_level(40);
			end
		end
	end
end

procedure Darkness
begin
	set_light_level(40);
end

