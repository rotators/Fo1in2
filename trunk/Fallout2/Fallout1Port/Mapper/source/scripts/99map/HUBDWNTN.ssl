procedure map_enter_p_proc begin
	set_global_var( GVAR_MARK_HUB_2, 1 );
	if (dude_elevation == 1) then begin
		Darkness;
	end
	else begin
		Lighting;
	end
	call Invasion;
   set_global_var(GVAR_LOAD_MAP_INDEX,0);
end

procedure map_update_p_proc begin
	if (dude_elevation == 1) then begin
		Darkness;
	end
	else begin
		Lighting;
	end
	if ((combat_is_initialized == 0) and (global_var( GVAR_UNDERGROUND_STATUS ) == 1) and (map_var(52) == 1) and not(is_loading_game)) then begin
		set_map_var(52, 0);
		set_map_var(53, 1);

		gfade_out(1);
		if not(is_loading_game) then begin	set_obj_visibility(Fry_Stub_Ptr, 1);	end
		if (global_var( GVAR_GREENE_DEAD ) != 1) then begin
			move_to(Justin_Ptr, 24064, 0);
			set_team( Justin_Ptr, TEAM_67 );
		end
		move_to(dude_obj, 24267, 0);
		if (global_var( GVAR_GREENE_DEAD ) != 1) then begin
			anim(Justin_Ptr, 1000, rotation_to_tile(tile_num(Justin_Ptr), dude_tile));
			anim(dude_obj, 1000, rotation_to_tile(dude_tile, tile_num(Justin_Ptr)));
		end
		gfade_in(1);
	end
end

procedure map_exit_p_proc begin
	if map_var(58) == 1 then begin
		set_map_var(58, 0);
		//game_time_advance((0 - (10 * 60 * 60 * 24 * 6)));
	end
end

