procedure map_enter_p_proc begin
	set_global_var( GVAR_MARK_LA_2, 1 );
	call map_lightning;

	if ((map_first_run) and not(boneyard_invaded)) then begin
		display_msg(message_str(SCRIPT_SHADYWST, 114));
	end
	if (global_var( GVAR_QUEST_BONEYARD_3_BOMBFOLL ) == 2) then begin
		if (is_success(roll_vs_skill(dude_obj, SKILL_TRAPS, 0))) then begin
			display_msg(message_str(SCRIPT_SHADYWST, 118));
		end
		else begin
			display_msg(message_str(SCRIPT_SHADYWST, 117));
		end
	end

	call Invasion;

	if (dude_item_count( PID_BRIEFCASE ) != 0) then begin
		dude_carrying_bomb := 1;
	end
	/*if (global_var( GVAR_LOAD_MAP_INDEX ) == 10) then begin
		override_map_start(11917 % 200, 11917 / 200, 0, 5);
	end
	else begin
		if (global_var( GVAR_LOAD_MAP_INDEX ) == 11) then begin
			override_map_start(18890 % 200, 18890 / 200, 0, 5);
		end
		else begin
			override_map_start(82, 114, 0, 5);
		end
	end*/

	if get_car_from_worldmap then begin
		override_map_start_hex(18121,0,1);
	end
	else begin
		override_map_start_hex(23680,0,5);
	end
end

procedure map_update_p_proc begin
	call map_lightning;
	if (removal_ptr) then begin
		destroy_object(removal_ptr);
		removal_ptr := 0;
	end
end

procedure map_exit_p_proc begin
	if (dude_carrying_bomb == 1) then begin
		if (dude_item_count( PID_BRIEFCASE ) == 0) then begin
			set_global_var( GVAR_QUEST_BONEYARD_3_BOMBFOLL, 2 );
		end
	end
end

procedure map_lightning begin
	if (dude_elevation == 1) then
		Darkness;
	else
		Lighting;
end

