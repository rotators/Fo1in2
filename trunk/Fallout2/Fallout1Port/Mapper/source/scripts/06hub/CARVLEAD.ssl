		set_local_var(5, 1);
		set_local_var(4, 0);
		WaitForTwoHours := 1;
		spawnDialogue := 1;
		beenPaid := 0;
		if (cur_map_index != MAP_HUBENT) then begin
			call create_caravan;
		end
