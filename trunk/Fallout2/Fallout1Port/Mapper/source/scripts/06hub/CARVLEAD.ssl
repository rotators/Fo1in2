procedure create_caravan begin
	if (local_var(8) == 0) then begin
		set_local_var(8, 1);
		if (cur_map_index == MAP_JUNKENT) then begin //  JUNKTOWN - ENTRANCE, MORBID, LARS
			call Junktown_Caravan;
		end
		else if (cur_map_index == MAP_BROHDENT) then begin //  BROTHERHOOD - ENTRANCE
			call BOS_Caravan;
		end
		else if (cur_map_index == MAP_HOTEL) then begin //  NECROPOLIS - HOTEL
			call Necropolis_Caravan;
		end
		else if (cur_map_index == MAP_LAADYTUM) then begin //  L.A. BONEYARD - ADYTUM (ENTRANCE)
			call LABone_Caravan;
		end
	end
end

procedure remove_caravan begin
	if (local_var(8) == 1) then begin
		set_local_var(8, 0);
		if (cur_map_index == MAP_JUNKENT) then begin //  JUNKTOWN - ENTRANCE, MORBID, LARS
		   Destroy_NS_Caravan(car1_junktown_hex,0)
			Destroy_NS_Caravan(car2_junktown_hex,0)
		end
		else if (cur_map_index == MAP_BROHDENT) then begin //  BROTHERHOOD - ENTRANCE
		   Destroy_EW_Caravan(car1_bos_hex,0)
			Destroy_EW_Caravan(car2_bos_hex,0)
		end
		else if (cur_map_index == MAP_HOTEL) then begin //  NECROPOLIS - HOTEL
		   Destroy_NS_Caravan(car1_necropolis_hex,1)
			Destroy_NS_Caravan(car2_necropolis_hex,1)
