				gsay_start;
				call Vance11;
				gsay_end;
				end_dialogue;
				set_local_var(5, 1);
			end
			else begin
				if ((local_var(4) == 0) or (global_var(VANCE_KNOWS_PLAYER) == 0)) then begin// Has the player been introduced to Vance by Lemmy or Jacob? ("HUBJAKE")
