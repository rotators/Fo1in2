begin
	if (dude_is_male) then begin
		gsay_message(564, 114, 50);
	end
	else begin
		gsay_message(564, 115, 50);
	end
end

procedure Deadguy06
begin
	if (dude_is_male) then begin
		gsay_message(564, 118, 50);
	end
	else begin
