	end
end

procedure Deadguy07
begin
	if (dude_is_male) then begin
		gsay_reply(564, 122);
	end
	else begin
		gsay_reply(564, 123);
	end
	giq_option( 4, SCRIPT_DEADGUY, 126, Deadguy08, NEUTRAL_REACTION );
	giq_option( 4, SCRIPT_DEADGUY, 127, combat, NEUTRAL_REACTION );
end

procedure Deadguy08
begin
	if (dude_is_male) then begin
		gsay_message(564, 128, 50);
