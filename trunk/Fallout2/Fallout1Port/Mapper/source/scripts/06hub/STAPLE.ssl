begin
	gsay_message(862, 107, 50);
	gdialog_mod_barter(-40);
	gsay_reply(862, 127);
	giq_option( 4, SCRIPT_STAPLE, 128, StapleEnd, NEUTRAL_REACTION );
	giq_option( -3, SCRIPT_STAPLE, 129, StapleEnd, NEUTRAL_REACTION );
end

