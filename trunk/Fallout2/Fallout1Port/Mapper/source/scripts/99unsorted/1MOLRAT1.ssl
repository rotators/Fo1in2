#include "..\headers\define.h"
#include "..\headers\command.h"

procedure start;
procedure critter_p_proc;
procedure use_skill_on_p_proc;
procedure damage_p_proc;

variable init_teams := 0;
variable tmp_hostile;

procedure start begin
	if (not(init_teams)) then begin
		init_teams := 1;
		critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_TEAM_NUM, 8);
		debug_msg("INIT_1MOLRAT1.SSL - please tell Sduibek when and where you saw this message. Thank you!");
	end
end

procedure critter_p_proc begin
	if (tmp_hostile) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
	else begin
		if not(dude_is_animal_friend) then begin
			if (self_can_see_dude or self_can_hear_dude) then begin// or (tile_distance_objs(self_obj, dude_obj) <= (get_critter_stat(self_obj, STAT_pe) * 2)) then begin//  (tile_distance_objs(self_obj, dude_obj) <= 3)
				tmp_hostile := 1;
				attack(dude_obj);
			end
		end
	end
end

procedure use_skill_on_p_proc begin
	if (action_being_used == SKILL_STEAL) then begin
		script_overrides;
		display_msg(message_str(SCRIPT_GENCHAT, 211));
		script_overrides;
	end
end

procedure damage_p_proc begin
	if obj_in_party(self_obj) then begin
		party_remove(self_obj);
		critter_add_trait(self_obj, 1, 6, 8);/* TEAM_NUM */
		tmp_hostile := 1;
	end
end
