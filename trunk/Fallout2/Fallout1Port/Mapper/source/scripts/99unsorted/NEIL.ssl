end

procedure talk_p_proc
begin
	dude_look_at_critter;
	set_local_var(4, 1);
	if ((game_time_hour >= 1900) or (game_time_hour < 600)) then begin
		call Neil00;
	end
	else begin
		if (global_var(QUEST_BONEYARD_4_FIND_SPY) == 1) then begin
			call Neil27;
		end
		else begin
			if ((global_var(QUEST_BONEYARD_4_FIND_SPY) == 2) and (local_var(5) == 0)) then begin
				set_local_var(5, 1);
				start_gdialog(271, self_obj, 4, -1, -1);
				gsay_start;
				call Neil28;
				gsay_end;
				end_dialogue;
			end
			else begin
				if ((global_var(SLIDE_TRAIN_FOLLOWERS) == 1) and (local_var(6) == 0)) then begin
					call Neil31;
				end
				else begin
					start_gdialog(271, self_obj, 4, -1, -1);
					gsay_start;
					call Neil01;
					gsay_end;
					end_dialogue;
				end
			end
		end
	end
end

