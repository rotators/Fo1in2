#include "..\headers\define.h"

procedure start;
procedure look_at_p_proc;//    script_action == 21
procedure use_p_proc;//    script_action == 6
procedure use_skill_on_p_proc;//    script_action == 8
procedure description_p_proc;//    script_action == 3
procedure use_obj_on_p_proc;//    script_action == 7


procedure start
begin
/*

DIALOG ENTRIES ARE FROM EMITER1A

*/
	if (script_action == 21) then begin//MOUSE-OVER DESCRIPTION -- look_at_p_proc - (usually brief length. hovered mouse over object, haven't clicked on it.)
		call look_at_p_proc;
	end
	else begin
		if (script_action == 7) then begin//<-- use_obj_on_p_proc
			call use_obj_on_p_proc;
		end
		else begin
			if (script_action == 3) then begin//DETAILED ON-CLICK DESCRIPTION (Binoculars icon) - description_p_proc
				call description_p_proc;
			end
			else begin
				if (script_action == 6) then begin//use_p_proc - Use, Activate, or Manipulate the Object or Item
					call use_p_proc;
				end
				else begin
					if (script_action == 8) then begin//<-- use_skill_on_p_proc
						call use_skill_on_p_proc;
					end
				end
			end
		end
	end
end

procedure look_at_p_proc
begin
	script_overrides;
	display_msg(message_str(SCRIPT_EMITER1A, 200));
	script_overrides;
end

procedure use_p_proc
begin
	script_overrides;
	display_msg(message_str(SCRIPT_EMITER1A, 201));
	script_overrides;
end

procedure use_skill_on_p_proc
begin
	if (action_being_used == SKILL_SCIENCE) then begin//-- SCIENCE
		script_overrides;
		display_msg(message_str(SCRIPT_EMITER1A, 203));
		script_overrides;
	end
	else begin
		if (action_being_used == SKILL_REPAIR) then begin//-- REPAIR
			script_overrides;
			display_msg(message_str(SCRIPT_EMITER1A, 202));
			script_overrides;
		end
	end
end

procedure description_p_proc
begin
	script_overrides;
	if (global_var(FIXT_BUGFIXES_ONLY) == 1) then begin
		display_msg(message_str(SCRIPT_EMITER1A, 201));
		script_overrides;
	end
	else begin
		display_msg(message_str(SCRIPT_EMITER1A, 204));
		script_overrides;
	end
end

procedure use_obj_on_p_proc
begin
//
//	drop the explosive and arm it automatically?
//
	if not(global_var(FIXT_BUGFIXES_ONLY)) then begin
		if (obj_pid(obj_being_used_with) == PID_DYNAMITE) or (obj_pid(obj_being_used_with) == PID_ACTIVE_DYNAMITE) or (obj_pid(obj_being_used_with) == PID_PLASTIC_EXPLOSIVES) or (obj_pid(obj_being_used_with) == PID_ACTIVE_PLASTIC_EXPLOSIVE) then begin
			script_overrides;
			display_msg(message_str(SCRIPT_EMITER1A, 205));
			script_overrides;
		end
	end
end
