procedure start begin
end

procedure use_p_proc begin
	script_overrides;
	dialogue_system_enter;
end

procedure talk_p_proc begin
	dude_look_at_self;
	start_gdialog(828, self_obj, 4, -1, -1);
	gsay_start;
	if glow_power_offline then begin
		call Term14;
	end
	else if glow_power_emergency then begin
		call Term01;
	end
	else begin
		call Term09;
	end
	gsay_end;
	end_dialogue;
end

procedure use_skill_on_p_proc begin
	if (action_being_used == SKILL_SCIENCE) then begin
		script_overrides;
		dialogue_system_enter;
	end
end

procedure Term01 begin
	gsay_reply(828, 100);
	giq_option( 4, SCRIPT_GPWRTERM, 101, Term02, NEUTRAL_REACTION );
	giq_option( -3, SCRIPT_GPWRTERM, 102, Term10, NEUTRAL_REACTION );
	giq_option( 0, SCRIPT_GPWRTERM, 103, TermEnd, NEUTRAL_REACTION );
end

