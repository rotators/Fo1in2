variable tmp_hostile;
variable initial :=  0;

procedure start begin
	if not(initial) then begin
		initial :=  1;
		set_self_ai( AI_FOLLOWER_LEADER );
	end
end

procedure critter_p_proc
begin
	if (self_can_see_dude and (map_var(1) == 1)) then begin
		float_msg(self_obj, message_str(SCRIPT_JAKE, 143), 3);
		self_walk_to_tile( 15484 );
		add_timer_event(self_obj, game_ticks(15), 1);
	end
	if (self_can_see_dude and (map_var(1) == 2)) then begin
		float_msg(self_obj, message_str(SCRIPT_JAKE, 144), 3);
		tmp_hostile := 1;
	end
	if (tmp_hostile) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
end

procedure destroy_p_proc begin
	rm_timer_event(self_obj);
	inc_neutral_critter
	rm_timer_event(self_obj);
end

procedure look_at_p_proc
begin
	script_overrides;
	if (local_var(4) == 1) then begin
		display_msg(message_str(SCRIPT_JAKE, 100));
	end
	else begin
		display_msg(message_str(SCRIPT_JAKE, 101));
	end
end

procedure map_update_p_proc
begin
	if (global_var( GVAR_QUEST_BONEYARD_3_BOMBFOLL ) == 2) then begin
		kill_critter(self_obj, ANIM_burned_to_nothing_sf);
	end
end

procedure pickup_p_proc
begin
	tmp_hostile := 1;
end

procedure talk_p_proc
begin
	dude_look_at_critter;
	if (not(local_var(5))) then begin
		start_gdialog(268, self_obj, 4, -1, -1);
		gsay_start;
		set_local_var(4, 1);
		if ((game_time_hour >= 1900) or (game_time_hour < 600)) then begin
			call Jake14;
		end
		else begin
			if (global_var( GVAR_SLIDE_TRAIN_FOLLOWERS )) then begin
				call Jake17;
			end
			else begin
				if (global_var( GVAR_QUEST_BONEYARD_4_FIND_SPY ) == 2) then begin
					call Jake16;
				end
				else begin
					if (global_var( GVAR_QUEST_BONEYARD_4_FIND_SPY ) == 1) then begin
						call Jake15;
					end
					else begin
						call Jake00;
					end
				end
			end
		end
		gsay_end;
		end_dialogue;
	end
end

procedure timed_event_p_proc
begin
	float_msg(self_obj, message_str(SCRIPT_JAKE, 143), 3);
	set_map_var(1, 2);
end

