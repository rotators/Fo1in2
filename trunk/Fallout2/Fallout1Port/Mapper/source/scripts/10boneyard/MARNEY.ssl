begin
	gfade_out(1);
	game_time_advance(game_ticks(25200));
	critter_mod_skill(dude_obj, SKILL_DOCTOR, 15);
	set_local_var(2, 1);
	gsay_message(270, 124, 50);
	gfade_in(1);
