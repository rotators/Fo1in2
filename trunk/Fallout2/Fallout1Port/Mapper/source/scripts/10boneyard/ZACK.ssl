procedure Start
begin
	

	if Only_Once then begin
		critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_TEAM_NUM, 48);
		critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_AI_PACKET, 28);
		Only_Once := 0;
	end
end

procedure look_at_p_proc
begin
	script_overrides;
	if (local_var(4) == 1) then begin
		display_msg(message_str(SCRIPT_ZACK, 100));
	end
	else begin
		display_msg(message_str(SCRIPT_ZACK, 101));
	end
end

