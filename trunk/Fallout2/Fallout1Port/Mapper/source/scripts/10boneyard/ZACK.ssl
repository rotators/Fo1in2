procedure Zack04
begin
	if (global_var(WATER_CHIP_8) == 9250) then begin
		BarterMod := 15;
		set_local_var(5, 2);
		call ZackYes;
	end
	else begin
		if (global_var(GUN_RUNNERS_STATUS) == 9201) then begin
			BarterMod := 5;
			set_local_var(5, 1);
			call ZackYes;
		end
		else begin
			BarterMod := -10;
			call ZackNo;
		end
