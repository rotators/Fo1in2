variable tmp_hostile;
variable initial :=  0;

procedure start begin
	if not(initial) then begin
		if ((global_var( GVAR_BLADES_STATUS ) == 9103) or (global_var( GVAR_BLADES_STATUS ) == 9102)) then begin
			set_self_team(TEAM_PLAYER );
		end
		else begin
			set_self_team(TEAM_LA_ADYTOWNER );
		end
		initial :=  1;
	end
end

procedure damage_p_proc begin
	if (source_obj == dude_obj) then begin
		set_global_var( GVAR_ENEMY_ADYTUM, 1 );
		set_self_team(TEAM_LA_ADYTOWNER );
	end
end

procedure destroy_p_proc begin
	inc_good_critter
	if (source_obj == dude_obj) then begin
		set_global_var( GVAR_ENEMY_ADYTUM, 1 );
	end
end

procedure look_at_p_proc
begin
	script_overrides;
	if (local_var(0)) then begin
		display_msg(message_str(SCRIPT_LORRAINE, 100));
	end
	else begin
		display_msg(message_str(SCRIPT_LORRAINE, 101));
	end
end

procedure pickup_p_proc
begin
	set_global_var( GVAR_ENEMY_ADYTUM, 1 );
end

procedure talk_p_proc
begin
	dude_look_at_self;
	start_gdialog(174, self_obj, 4, -1, -1);
	gsay_start;
	if (local_var(0)) then begin
		call Lorraine04;
	end
	else begin
		call Lorraine01;
	end
	gsay_end;
	end_dialogue;
end

procedure critter_p_proc
begin
	if (self_can_see_dude) then begin
		if (global_var( GVAR_ENEMY_ADYTUM ) == 1) then begin
			attack(dude_obj);
		end
	end
end

