procedure Start begin
	if Only_Once then begin
		set_self_team(TEAM_LA_BLADES );
		set_self_ai( AI_BLADES );
		RazorPtr := self_obj;
		if (global_var(ADYTUM_RAZOR_SOMETHING_1) == 1) then begin
			set_local_var(4, 1);
		end
		Only_Once := 0;
	end
end

procedure look_at_p_proc begin
	script_overrides;
