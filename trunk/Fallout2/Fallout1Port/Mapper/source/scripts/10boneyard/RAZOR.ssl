procedure talk_p_proc begin
	dude_look_at_critter;

	if (global_var(ENEMY_BLADES) == 1) then begin
		float_msg(self_obj, message_str(SCRIPT_ENEMY, random(100, 105)), 2);
	end
	else begin
		if ((global_var(BLADES_STATUS) == 2) and (local_var(6) == 1)) then begin
			float_msg(self_obj, message_str(SCRIPT_RAZOR, random(215, 217)), 0);
		end
		else begin
			if ((local_var(4) == 1) and (get_critter_stat(dude_obj, STAT_iq) < 4)) then begin
				float_msg(self_obj, message_str(SCRIPT_RAZOR, 222), 0);
			end
			else begin
				get_reaction
				start_gdialog(278, self_obj, -1, -1, -1);
				gsay_start;
				if (global_var(BLADES_STATUS) == 2) then begin
					if (global_var(ADYTUM_RAZOR_SOMETHING_0) == 1) then begin
						if (global_var(ADYTUM_RAZOR_SOMETHING_2) == 1) then begin
							call Razor45;
						end
						else begin
							if (local_var(4) == 0) then begin
								call Razor42;
							end
							else begin
								call Razor48;
							end
						end
					end
					else begin
						call RazorFin;
					end
					set_local_var(6, 1);
				end
				else begin

					if (global_var(GUN_RUNNERS_STATUS) == 9202) then begin
						call Razor33;
					end
					else if (global_var(ZIMMERMAN_STATUS) == 9001) then begin
						call Razor20;
					end
					else if global_var(RECEIVED_HOLODISK_RAZOR) and (global_var(WATER_CHIP_8) != 2) then begin
						call Razor26;
					end
					else if (global_var(ZIMMERMAN_STATUS) == 9003) then begin
						call Razor30;
					end
					else if (global_var(ADYTUM_RAZOR_SOMETHING_2) == 1) then begin
						call Razor46;
					end
					else if (global_var(ZIMMERMAN_STATUS) == 0) then begin
						call Razor01;
					end
					else if (global_var(DUDE_ENEMY_BLADES) == 1) then begin
						call Razor37;
					end
					else begin
						call fix00;
					end

				end
				gsay_end;
				end_dialogue;
			end
		end
	end
end

procedure damage_p_proc begin
	if source_obj == dude_obj then begin
		set_global_var(ENEMY_BLADES, 1);
	end
end

procedure destroy_p_proc begin
	if source_obj == dude_obj then begin
		inc_good_critter
		set_global_var(ENEMY_BLADES, 1);
	end
	set_global_var(ZIMMERMAN_STATUS, 9002);
end

procedure critter_p_proc begin
	if (global_var(ADYTUM_RAZOR_SOMETHING_1) == 1) then begin
		set_local_var(4, 1);
	end
	if (local_var(5) == 1) then begin
		attack(dude_obj);
		set_local_var(5, 0);
		set_global_var(ENEMY_BLADES, 1);
	end
end

