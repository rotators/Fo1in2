procedure follow_player
begin
	if (tile_distance_objs(self_obj, dude_obj) > global_var(KATJA_DISTANCE_VAL)) then begin
		if (anim_busy(self_obj) == 0) then begin
			dest_tile := tile_num_in_direction(tile_num_in_direction(tile_num(dude_obj), rotation_to_tile(tile_num(dude_obj), tile_num(self_obj)), global_var(KATJA_DISTANCE_VAL)), random(0, 5), random(0, 2));
			if (local_var(1) or local_var(2) or local_var(3)) then begin
				call SDUIBEK_DISTANCE;
			end
			else begin
				call TEAMX_DISTANCE;
			end
		end
	end
end

procedure SDUIBEK_DISTANCE
begin
	if (tile_distance_objs(self_obj, dude_obj) >= (2 * global_var(KATJA_DISTANCE_VAL))) then begin// was 1.5
		animate_move_obj_to_tile(self_obj, dest_tile, 1 bwor 16);
	end
end

