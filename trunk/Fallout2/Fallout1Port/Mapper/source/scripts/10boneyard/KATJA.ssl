procedure StepAside
begin
	variable LVar0 := 0;
	NewHex := 0;
	LVar0 := random(0, 5);
	LVar0 := random(0, 5);
	LVar0 := random(0, 5);
	if (LVar0 == 0) then begin
		NewHex := tile_num(self_obj) - 400;
	end
	if (LVar0 == 1) then begin
		NewHex := tile_num(self_obj) - 202;
	end
	if (LVar0 == 2) then begin
		NewHex := tile_num(self_obj) - 198;
	end
	if (LVar0 == 3) then begin
		NewHex := tile_num(self_obj) + 400;
	end
	if (LVar0 == 4) then begin
