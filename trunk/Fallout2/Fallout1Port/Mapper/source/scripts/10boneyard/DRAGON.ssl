		display_msg(message_str(SCRIPT_DRAGON, 100));
	end
	else begin
		display_msg(message_str(SCRIPT_DRAGON, 103));
	end
end

procedure show_false_name
begin
	script_overrides;
	display_msg(message_str(SCRIPT_DRAGON, random(104, 110)));
end

