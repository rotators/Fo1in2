#include "..\headers\define.h"

procedure start;
procedure KillMe;

variable AnimFrame;
variable Killed := 0;


procedure start
begin
	if not(Killed) then begin
		call KillMe;
		Killed := 1;
	end
end

procedure KillMe
begin
	variable LVar0 := 0;
	LVar0 := random(0, 5);//Face the dead critter in a random direction:
	if (LVar0 == 0) then begin
		LVar0 := tile_num(self_obj) - 400;
	end
	else begin
		if (LVar0 == 1) then begin
			LVar0 := tile_num(self_obj) - 202;
		end
		else begin
			if (LVar0 == 2) then begin
				LVar0 := tile_num(self_obj) - 198;
			end
			else begin
				if (LVar0 == 3) then begin
					LVar0 := tile_num(self_obj) + 400;
				end
				else begin
					if (LVar0 == 4) then begin
						LVar0 := tile_num(self_obj) + 202;
					end
					else begin
						LVar0 := tile_num(self_obj) + 198;
					end
				end
			end
		end
	end
	anim(self_obj, 1000, rotation_to_tile(tile_num(self_obj), LVar0));
	AnimFrame := random(0,20);
	if (AnimFrame == 0) or (AnimFrame == 1) or (AnimFrame == 2) or (AnimFrame == 3) then begin
		kill_critter(self_obj, ANIM_dancing_autofire_sf);//bullet holes - full auto partial hit
	end
	else begin
		if (AnimFrame == 4) or (AnimFrame == 5) or (AnimFrame == 6) then begin
			kill_critter(self_obj, ANIM_sliced_in_half_sf);//cut in half - Laser Rifle, Gatling
		end
		else begin
			if (AnimFrame == 7) or (AnimFrame == 8) or (AnimFrame == 9) then begin
				kill_critter(self_obj, ANIM_chunks_of_flesh_sf);//head & arm gone - full auto
			end
			else begin
				if (AnimFrame == 10) or (AnimFrame == 11) then begin
					kill_critter(self_obj, ANIM_exploded_to_nothing_sf);//exploded - Rocket Launcher
				end
				else begin
					if (AnimFrame == 12) or (AnimFrame == 13) then begin
						kill_critter(self_obj, ANIM_called_shot_pic);//generic facedown - w/blood
					end
					else begin
						if (AnimFrame == 14) or (AnimFrame == 15) or (AnimFrame == 16) then begin
							kill_critter(self_obj, ANIM_big_hole_sf);//side blown out - Eyes/Torso critical (side blown out)
						end
						else begin
							kill_critter(self_obj, ANIM_melted_to_nothing_sf);//melted pile - Plasma Rifle
						end
					end
				end
			end
		end
	end
end
