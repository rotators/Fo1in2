#include "..\headers\define.h"

procedure start;
procedure use_stuff;
procedure pick_lock;

variable unlocked;


procedure start
begin
	if ((script_action == 21) or (script_action == 3)) then begin// 21 is look_at, 3 is description (Binoculars)   //NEED TO FIX THIS, DUPLICATE DESCRIPTIONS IS BULLSHIT. --Sduibek
		script_overrides;
		display_msg(message_str(SCRIPT_MVRCRDOR, 100));//{100}{}{You see a steel door. A sign on it reads: "Reactor Core Control Room. Authorized Personnel Only."}
	end
	else begin
		if (script_action == 6) then begin//use_p_proc - Use, Activate, or Manipulate the Object or Item
			call use_stuff;
		end
		else begin
			if (script_action == 7) then begin//<-- use_obj_on_p_proc
				if (obj_pid(obj_being_used_with) == 77) then begin
					call pick_lock;
				end
			end
		end
	end
end

procedure use_stuff
begin
	if (not(unlocked)) then begin
		script_overrides;
		display_msg(message_str(SCRIPT_MVRCRDOR, 101));//{101}{}{The door is locked electronically.}
	end
end

procedure pick_lock
begin
	script_overrides;
	if (unlocked) then begin
		display_msg(message_str(SCRIPT_MVRCRDOR, 102));//{102}{}{The door is not locked.}
	end
	else begin
		if (is_success(roll_vs_skill(dude_obj, SKILL_LOCKPICK, -20))) then begin
			display_msg(message_str(SCRIPT_MVRCRDOR, 103));//{103}{}{You manage to bypass the electronic lock.}
			unlocked := 1;
		end
		else begin
			display_msg(message_str(SCRIPT_MVRCRDOR, 104));//{104}{}{Your attempt to circumvent the electronic lock fails.}
		end
	end
end

