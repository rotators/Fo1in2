	start_gdialog(439, self_obj, 4, -1, -1);
	gsay_start;
	if (local_var(4) == 0) then begin
		set_local_var(4, 1);
		call guard04;
	end
	else begin
		call guard15;
	end
	gsay_end;
	end_dialogue;
end

