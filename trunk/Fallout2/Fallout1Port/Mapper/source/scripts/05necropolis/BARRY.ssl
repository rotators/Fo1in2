/*

	Necropolis - Watershed super mutant

*/

/* Include Files */
#include "..\headers\define.h"
#include "..\headers\mapnecro.h"

#define NAME                    SCRIPT_BARRY
#define TOWN_REP_VAR            (GVAR_TOWN_REP_NECROPOLIS)

#include "..\headers\command.h"
#include "..\headers\modreact.h"

/* Standard Script Procedures */
procedure start;
procedure look_at_p_proc;
procedure pickup_p_proc;
procedure critter_p_proc;
procedure talk_p_proc;
procedure destroy_p_proc;

procedure mutant01;
procedure mutant02;
procedure Node998;

variable tmp_hostile;
variable init_teams := 0;
variable noevent;
variable loopcount;

#define float(x)    						float_msg(self_obj, message_str(NAME, x), FLOAT_MSG_GREEN)

procedure start begin
	if (not(init_teams)) then begin
		set_self_team(TEAM_NECROPOLIS_MUTANT);
		set_self_ai(AI_SUPER_MUTANT_NECRO);
		set_local_var(1, 0);
		init_teams := 1;
	end
end

procedure look_at_p_proc begin
	script_overrides;
	display_msg(mstr(101));
end

procedure pickup_p_proc begin
	tmp_hostile := 1;
end

procedure talk_p_proc begin
	if (global_var( GVAR_SUPER_MUTANTS_KILLED ) < 1) then begin
		if (global_var( GVAR_WATERSHED_MUTANTS_LEAVE ) == 0) then begin

			dude_look_at_critter;
			if ((game_time_hour >= 1900) or (game_time_hour < 600)) then begin
				call mutant01;
			end
			else begin
				call mutant02;
			end

		end
		else begin
			display_msg(mstr(104));
		end
	end
end

procedure mutant01 begin
	float(102);
	call Node998;
end

procedure mutant02 begin
	float(103);
end

procedure Node998 begin
	tmp_hostile := 1;
end

procedure critter_p_proc begin
	if ((global_var( GVAR_SUPER_MUTANTS_KILLED ) > 0) and self_can_see_dude and (global_var( GVAR_WATERSHED_MUTANTS_LEAVE ) < 1)) then begin
		tmp_hostile := 1;
	end

	if (tmp_hostile > 0) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
	else begin

		if ((global_var( GVAR_WATERSHED_MUTANTS_LEAVE ) == 1) and (self_tile != 15507)) then begin
		self_walk_to_tile( 15507 );
		end
		else if ((global_var( GVAR_WATERSHED_MUTANTS_LEAVE ) == 1) and (self_tile == 15507)) then begin
			set_global_var( GVAR_WATERSHED_MUTANTS_LEAVE, 2 );
		end
		else if ((global_var( GVAR_WATERSHED_MUTANTS_LEAVE ) == 2) and (self_tile != 12536)) then begin
			self_walk_to_tile( 12536 );
		end
		else if ((self_tile == 12536) and (global_var( GVAR_WATERSHED_MUTANTS_LEAVE ) == 2)) then begin
			if not(is_loading_game) then begin
				set_self_invisible; //  MAKE INVISIBLE
			end
		end

	end
end

procedure destroy_p_proc begin
	set_global_var( GVAR_SUPER_MUTANTS_KILLED, global_var( GVAR_SUPER_MUTANTS_KILLED ) + 1 );

	check_watershed_sm_killed
	inc_evil_critter
end
