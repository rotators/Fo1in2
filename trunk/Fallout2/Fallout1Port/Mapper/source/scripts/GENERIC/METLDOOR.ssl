procedure damage_p_proc begin
	if (weapon_dmg_type(target_obj) == DMG_explosion) then begin

	//	if (cur_map_index == 13) or (cur_map_index == 14) or (cur_map_index == 15) then begin
	//		set_global_var(ENEMY_BROTHERHOOD, 1);
	//	end
		if is_success(roll_vs_skill(dude_obj, SKILL_TRAPS, 0)) then begin
			set_local_var(0, 2);
			display_msg(message_str(SCRIPT_GENCHAT, 503) + 25 + message_str(SCRIPT_GENCHAT, 504));
			give_exp_points(25);
		end
		else begin
			display_msg(message_str(SCRIPT_GENCHAT, 505));
			if not(obj_is_open(self_obj)) then begin
				use_obj(self_obj);
			end
			set_local_var(0, local_var(0) + 1);
		end
		if local_var(0) == 2 then begin
			destroy_object(self_obj);
		end

	end
   else begin
       display_msg(mstr(193));
   end
end

procedure timed_event_p_proc begin
	if (fixed_param == 1) then begin
		if obj_is_open(self_obj) then begin
			use_obj(self_obj);
		end
	end
end

procedure use_p_proc begin
	if (cur_map_index == MAP_VAULT13) or (cur_map_index == MAP_BROHD12) or (cur_map_index == MAP_BROHD34) then begin
		rm_timer_event(self_obj);
		add_timer_event(self_obj, game_ticks(15), 1);
	end
end

