procedure start
begin
	if Only_Once then begin
		Only_Once := 0;
critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_TEAM_NUM, 38);
critter_add_trait(self_obj,TRAIT_OBJECT,OBJECT_AI_PACKET, 50);
	end
	if (script_action == 21) then begin//MOUSE-OVER DESCRIPTION -- look_at_p_proc - (usually brief length. hovered mouse over object, haven't clicked on it.)
		call look_at_p_proc;
	end
	else begin
		if (script_action == 11) then begin//<--- talk_p_proc (Face icon), can also call "do_dialogue" or "do_dialog"
			call talk_p_proc;
		end
		else begin
			if (script_action == 6) then begin//use_p_proc - Use, Activate, or Manipulate the Object or Item
				call use_p_proc;
			end
			else begin
				if (script_action == 15) then begin//map_enter_p_proc (or "map_init") called when entering from World Map, on green "exit" grids, SOME ladders, doesn't appear to call on elevators or manholes
					call map_enter_p_proc;
				end
			end
		end
	end
end

procedure map_enter_p_proc
begin
	if (cur_map_index == MAP_JUNKCSNO) then begin //  JUNKTOWN - CASINO, GIZMO, SKUM PITT, BOXING, DOGMEAT
		if ((global_var(GIZMO_DEAD) == 1) or (global_var(CAPTURE_GIZMO) == 2)) then begin
			destroy_object(self_obj);
		end
	end
end

procedure talk_p_proc
begin
	anim(dude_obj, 1000, rotation_to_tile(tile_num(dude_obj), tile_num(self_obj)));
	start_gdialog(697, self_obj, 4, -1, -1);
	gsay_start;
	call Dealer00;
	gsay_end;
	end_dialogue;
end

procedure look_at_p_proc
begin
	script_overrides;
	display_msg(message_str(SCRIPT_FALCON1, 169));
end

procedure use_p_proc
begin
	script_overrides;
	dialogue_system_enter;
end

procedure Dealer00
begin
	Slot_Str := message_str(SCRIPT_FALCON1, 202) + item_caps_total(dude_obj) + message_str(SCRIPT_FALCON1, 203);
	gsay_reply(697, Slot_Str);
	giq_option(4, 697, 190, CheckMoney00, 50);
	giq_option(4, 697, 191, CheckMoney01, 50);
	giq_option(4, 697, 192, CheckMoney02, 50);
	giq_option(4, 697, 193, CheckMoney03, 50);
	giq_option(4, 697, 194, CheckMoney04, 50);
	giq_option(4, 697, 195, DealerEnd, 50);
	giq_option(-3, 697, 107, Dealer01, 50);
end

