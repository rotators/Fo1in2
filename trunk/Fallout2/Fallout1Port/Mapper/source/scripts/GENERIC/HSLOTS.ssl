			gsay_reply(697, message_str(SCRIPT_FALCON1, 205) + BonusCaps + message_str(SCRIPT_FALCON1, 211) + " " + message_str(SCRIPT_FALCON1, 204));
		end
		else begin
			gsay_reply(697, message_str(SCRIPT_FALCON1, 205) + BonusCaps + message_str(SCRIPT_FALCON1, 206) + " " + message_str(SCRIPT_FALCON1, 204));
		end
	end
	else begin
		gsay_reply(697, message_str(SCRIPT_FALCON1, 182) + " " + message_str(SCRIPT_FALCON1, 204));
	end
	item_caps_adjust(dude_obj, (Bet * -1));
	call Dealer07;
