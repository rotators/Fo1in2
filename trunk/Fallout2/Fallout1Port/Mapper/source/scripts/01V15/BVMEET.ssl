#include "..\headers\define.h"

procedure start;
procedure damage_p_proc;


procedure start
begin
	if (script_action == 2) then begin// spatial_p_proc - Player is on or near hex of the location or object this script is using
		if source_obj == dude_obj then begin
			if (local_var(0) == 0) then begin
				set_local_var(0, 1);
				if (is_success(do_check(dude_obj, 1, -2))) then begin
					display_msg(message_str(SCRIPT_BVMEET, 100));
				end
			end
		end
	end
	else begin
		if (script_action == 14) then begin
			call damage_p_proc;
		end
	end
end

procedure damage_p_proc
begin
	script_overrides;
	if global_var(FADE_TIMES_INCREASED) then begin
		gfade_out(1);
		gfade_out(1);
	end
	gfade_out(1);
	if (is_success(roll_vs_skill(dude_obj, 11, 0))) then begin// TRAPS
		display_msg(message_str(SCRIPT_BLAST, 100));
		give_exp_points(10);
		display_msg(message_str(SCRIPT_BLAST, 103));
	end
	else begin
		display_msg(message_str(SCRIPT_BLAST, 102));
	end
	gfade_in(1);
	destroy_object(self_obj);
end

