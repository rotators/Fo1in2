																					else begin
																						if (lesson_ptr == 32) then begin
																							float_msg(self_obj, message_str(SCRIPT_THOMAS, 125), 3);
																						end
																						else begin
																							if (lesson_ptr == 33) then begin
																								float_msg(Student_ptr, message_str(SCRIPT_THOMAS, 126), 8);
																							end
																							else begin
																								if (lesson_ptr == 34) then begin
																									float_msg(self_obj, message_str(SCRIPT_THOMAS, 127), 3);
