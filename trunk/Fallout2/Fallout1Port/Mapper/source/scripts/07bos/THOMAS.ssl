	else begin
		if (lesson_ptr == 6) then begin
			who := 0;
			sequence := 0;
			delay := 2;
			call do_round;
		end
		else begin
			if (lesson_ptr == 7) then begin
				who := 0;
				sequence := 0;
				delay := 2;
				call do_round;
			end
			else begin
				if (lesson_ptr == 8) then begin
					who := 1;
					sequence := 1;
					delay := 2;
					call do_round;
				end
				else begin
					if ((lesson_ptr > 8) and (lesson_ptr < 12)) then begin
						float_msg(self_obj, message_str(SCRIPT_THOMAS, 100 + lesson_ptr), 3);
