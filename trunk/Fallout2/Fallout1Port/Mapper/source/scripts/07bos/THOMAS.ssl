														else begin
															if (lesson_ptr == 25) then begin
																float_msg(self_obj, message_str(SCRIPT_THOMAS, 119), 3);
															end
															else begin
																if (lesson_ptr == 26) then begin
																	float_msg(self_obj, message_str(SCRIPT_THOMAS, 120), 3);
																end
																else begin
																	if (lesson_ptr == 27) then begin
																		float_msg(self_obj, message_str(SCRIPT_THOMAS, 121), 3);
																	end
																	else begin
																		if (lesson_ptr == 28) then begin
																			float_msg(self_obj, message_str(SCRIPT_THOMAS, 122), 3);
																		end
																		else begin
																			if (lesson_ptr == 29) then begin
																				float_msg(Student_ptr, message_str(SCRIPT_THOMAS, 107), 8);
																			end
																			else begin
																				if (lesson_ptr == 30) then begin
																					float_msg(self_obj, message_str(SCRIPT_THOMAS, 123), 3);
																				end
																				else begin
																					if (lesson_ptr == 31) then begin
																						float_msg(self_obj, message_str(SCRIPT_THOMAS, 124), 3);
