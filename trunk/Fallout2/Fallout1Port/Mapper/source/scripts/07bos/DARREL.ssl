		Only_Once := 0;
		set_self_team(TEAM_BROTHERHOOD );
		set_self_ai( AI_BROTHERHOOD_KNIGHT );
	end
end

procedure start_dialogue
begin
	get_reaction
	if (global_var( GVAR_QUEST_BROHOOD_1_JOIN_THEM ) == 1) then begin
		start_gdialog(316, self_obj, 4, -1, -1);
		gsay_start;
		if (second) then begin
			call Darrel71;
		end
		else begin
			second := 1;
			call Darrel59;
		end
		gsay_end;
		end_dialogue;
	end
	else begin
		if (local_var(4) == 0) then begin
			start_gdialog(316, self_obj, 4, -1, -1);
			gsay_start;
			call Darrel01;
			gsay_end;
			end_dialogue;
		end
		else begin
			call Darrel16;
		end
	end
	set_local_var(4, 1);
end

