#define LVAR_Home_Rotation          (7)

procedure Start begin
	if Only_Once then begin
		Only_Once := 0;

		if get_blades_attacking then begin
			if not(get_zimmermann_turned) then begin
				set_self_team(TEAM_LA_REGULATORS);
			end
			else begin
				set_self_team(TEAM_PLAYER);
			end
		end
		else begin
			set_self_team(TEAM_LA_ADYTOWNER);
		end
		set_self_ai(AI_PEASANT);
		JonPtr := self_obj;
	end
end

procedure map_enter_p_proc begin
   if map_first_run then begin
	   set_local_var(LVAR_Home_Tile, self_tile);
      set_local_var(LVAR_Home_Rotation, self_cur_rot);
      self_caps_adjust( random(50, 150) );
   end
   else begin
      critter_attempt_placement(self_obj,local_var(LVAR_Home_Tile), self_elevation);
      self_rotate(local_var(LVAR_Home_Rotation));
   end
end

procedure look_at_p_proc begin
	script_overrides;
	if (local_var(LVAR_Here_Before) == 1) then begin
		display_msg(mstr(176));
	end
	else begin
		display_msg(mstr(175));
	end
	script_overrides;
end

procedure description_p_proc begin
end

procedure talk_p_proc begin
	dude_look_at_self;

	if (global_var( GVAR_ENEMY_ADYTUM ) == 1) then begin
		float_msg( self_obj, message_str(SCRIPT_ENEMY, random(100, 105)), FLOAT_MSG_RED );
	end
	else if (map_var(MVAR_RegulatorCount) == 0) and get_zimmermann_turned then begin
		// Added the float message, because in vanilla there seems to be nothing if Zimmermann survives the Blade invasion??
		float_msg(self_obj, message_str(NAME, random(183,187)), FLOAT_COLOR_NORMAL);
	end
	else begin
		if ((local_var(LVAR_Here_Before) == 1) and (dude_iq < 4)) then begin
			float_msg( self_obj, message_str(SCRIPT_JON, 139), FLOAT_MSG_NORMAL );
		end
		else begin
			if get_zimmermann_at_peace then begin
				float_msg( self_obj, message_str(SCRIPT_JON, random(183, 187)), FLOAT_MSG_NORMAL );
			end
			else begin
				get_reaction
				start_gdialog(288, self_obj, -1, -1, -1);
				gsay_start;
				DisplayMessage := 100;
				if (local_var(LVAR_Here_Before) == 0) then begin
					call JonZimmerman00;
				end
				else begin
					if (global_var( GVAR_ZIMMERMAN_STATUS ) == 0) then begin
						call JonZimmerman01;
					end
					else begin
						if global_var( GVAR_RECEIVED_HOLODISK_RAZOR ) then begin
							if get_task_kill_razor then begin
								call JonZimmerman24;
							end
							else begin
								call JonZimmerman27;
							end
						end
						else begin
							if get_zimmermann_insulted then begin
								call JonZimmerman17;
							end
							else if get_task_kill_razor then begin
								call JonZimmerman19;
							end
							else if get_razor_killed then begin
								call JonZimmerman21;
							end
						end
					end
				end
				gsay_end;
				end_dialogue;
			end
		end
	end
end

procedure damage_p_proc begin
	if source_obj == dude_obj then begin
		if (global_var( GVAR_DUDE_ENEMY_REGULATORS ) != 1) then begin
			set_global_var( GVAR_ENEMY_ADYTUM, 1 );
			set_self_team(TEAM_LA_ADYTOWNER);
		end
	end
end

procedure destroy_p_proc begin
	if source_obj == dude_obj then begin
		if (global_var( GVAR_DUDE_ENEMY_REGULATORS ) != 1) then begin
			set_global_var( GVAR_ENEMY_ADYTUM, 1 );
			set_self_team(TEAM_LA_ADYTOWNER);
		end
		inc_good_critter
	end
end

procedure critter_p_proc begin
	if (self_can_see_dude) then begin
		if (get_blades_attacking and not(get_zimmermann_turned)) then begin
			set_self_team(TEAM_LA_REGULATORS);
			float_msg( self_obj, message_str(SCRIPT_JON, 174), FLOAT_MSG_RED );
			attack(dude_obj);
		end
		else if (global_var(GVAR_ENEMY_ADYTUM) == 1) then begin
			attack(dude_obj);
		end
	end

	if (global_var(GVAR_DUDE_ENEMY_REGULATORS) == 1) and not(get_zimmermann_turned) then begin
		set_self_team(TEAM_LA_REGULATORS);
		attack(dude_obj);
	end
end

procedure pickup_p_proc begin
	set_global_var( GVAR_ENEMY_ADYTUM, 1 );
end

