#include "..\headers\define.h"
#include "..\headers\mbase.h"
//#include "..\headers\maps\mbstrg12.h"

#define NAME                    SCRIPT_FIELD6A

#include "..\headers\command.h"

procedure start;
procedure map_enter_p_proc;
procedure map_update_p_proc;

import variable Field6a_Ptr;

procedure start begin
end

procedure map_enter_p_proc
begin
	Field6a_Ptr := self_obj;
	if (global_var( GVAR_VATS_ALERT ) == 1) then begin
		if not(is_loading_game) then begin    set_self_visible;    end//  MAKE VISIBLE
		set_force_fields_on;
		set_map_var(21, 1);
	end
	if (get_force_fields_off or (map_var(21) == 0)) then begin
		if not(is_loading_game) then begin    set_self_invisible;    end
	end
end

procedure map_update_p_proc
begin
	Field6a_Ptr := self_obj;
	if get_force_fields_off then begin
		if ((map_var(21) == 0) and (global_var( GVAR_VATS_ALERT ) == 1)) then begin
			set_map_var(21, 1);
			if not(is_loading_game) then begin    set_self_invisible;    end
		end
		else begin
			if not(is_loading_game) then begin    set_self_invisible;    end
		end
	end
	else begin
		if get_force_fields_on then begin
			set_map_var(21, 1);
			if not(is_loading_game) then begin    set_self_visible;    end//  MAKE VISIBLE
		end
		else begin
			if (global_var( GVAR_VATS_ALERT ) == 1) then begin
				if not(is_loading_game) then begin    set_self_visible;    end//  MAKE VISIBLE
				set_force_fields_on;
				set_map_var(21, 1);
			end
		end
	end
end
