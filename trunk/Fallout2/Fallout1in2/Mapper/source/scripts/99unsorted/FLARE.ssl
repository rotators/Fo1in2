//{103}{}{You see a lit flare.}
//{105}{}{You see a flare.}

//
// VANILLA FLARES LAST FOR TWO HOURS
//


procedure start
begin
	if (script_action == use_proc) then begin//<-- use_obj
		if not(local_var(0)) then begin
			set_local_var(0, game_time);
						display_msg("local var 0 is " + local_var(0) + " ");
		end

