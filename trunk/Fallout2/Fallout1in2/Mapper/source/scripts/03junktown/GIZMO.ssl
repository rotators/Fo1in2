procedure critter_p_proc begin
	if (tmp_hostile) then begin
		tmp_hostile := 0;
		attack(dude_obj);
	end
	else begin
		if (Killian_ptr != 0) then begin
			float(220);
			attack(Killian_ptr);
		end
		else begin
			if (self_item_count( PID_ELECTRONIC_BUG )) then begin
				set_global_var( GVAR_BUG_PLANTED, 1 );
			end
			else begin
				if (global_var( GVAR_ENEMY_GIZMOS_GANG ) == 1) then begin// - ENEMY_GIZMOS_GANG
					if (self_can_see_dude) then begin
						attack(dude_obj);
					end
				end
				else begin
					if (global_var( GVAR_GIZMO_TALKED_ONCE ) != 1) then begin
						if (tile_distance_objs(self_obj, dude_obj) <= 14) then begin
							if dude_can_see_self or self_can_see_dude or self_can_hear_dude then begin
								set_global_var( GVAR_GIZMO_TALKED_ONCE, 1 );
								float_msg( self_obj, message_str(SCRIPT_GIZMO, 227), FLOAT_MSG_RED );
							end
						end
					end
				end
			end
		end
	end
end

procedure description_p_proc begin
	script_overrides;
	display_msg(message_str(SCRIPT_GIZMO, 218));
