procedure Chant04;
procedure Chant05;
procedure Chant06;
procedure Chant07;
procedure ChantEnd;
procedure Combat;

variable tmp_hostile;
variable Only_Once := 1;

procedure destroy_p_proc;

procedure start
begin


	if Only_Once then begin
		Only_Once := 0;
		set_self_team(TEAM_CATHEDRAL );
		set_self_ai( AI_CHILDREN_TRUE );
	end
	if ((script_action == look_at_proc) or (script_action == description_proc)) then begin// 21 is look_at, 3 is description (Binoculars)   //NEED TO FIX THIS, DUPLICATE DESCRIPTIONS IS BULLSHIT. --Sduibek
		script_overrides;
		display_msg(message_str(SCRIPT_CHANTER, 100));
	end
	else begin
		if (script_action == critter_proc) then begin//<-- critter_p_proc - (can also be "Critter_Action") - do they see you, should they wander, should they attack you, etc..
			if (tmp_hostile) then begin
				tmp_hostile := 0;
				attack(dude_obj);
			end
		end
		else begin
			if (script_action == pickup_proc) then begin//<---caught stealing! (pickup_p_proc)
				tmp_hostile := 1;
			end
			else begin
				if (script_action == destroy_proc) then begin//destroy_p_proc - Object or Critter has been killed or otherwise eradicated. Fall down go boom.
					call destroy_p_proc;
				end
				else begin
					if (script_action == talk_proc) then begin//<--- talk_p_proc (Face icon), can also call "do_dialogue" or "do_dialog"
						script_overrides;
						if (global_var( GVAR_CATHEDRAL_ENEMY ) == 1) then begin
							float_msg( self_obj, message_str(SCRIPT_CHANTER, 101), FLOAT_MSG_NORMAL );
						end
						else begin
							start_gdialog(398, self_obj, 4, -1, -1);
							gsay_start;
							call Chant01;
							gsay_end;
							end_dialogue;
						end
					end
				end
			end
		end
	end
end

procedure Chant01
begin
	gsay_reply( SCRIPT_CHANTER, 102 );
	giq_option( 7, SCRIPT_CHANTER, 103, Chant02, NEUTRAL_REACTION );
	giq_option( 4, SCRIPT_CHANTER, 104, Chant03, NEUTRAL_REACTION );
	giq_option( 4, SCRIPT_CHANTER, 105, Chant04, NEUTRAL_REACTION );
	if (global_var( GVAR_ALCOHOL_ADDICT ) == 1) then begin
		giq_option( 4, SCRIPT_CHANTER, 106, Chant05, NEUTRAL_REACTION );
	end
	if (has_rep_berserker) then begin
		giq_option( 4, SCRIPT_CHANTER, 107, Chant05, NEUTRAL_REACTION );
	end
	giq_option( -3, SCRIPT_CHANTER, 108, Chant06, NEUTRAL_REACTION );
end

procedure Chant02
begin
	gsay_message( SCRIPT_CHANTER, 109, 50 );
end

