procedure Chant07
begin
	if (dude_is_male) then begin
		gsay_message( SCRIPT_CHANTER, 114, 49 );
	end
	else begin
		gsay_message( SCRIPT_CHANTER, 115, 49 );
	end
end

procedure ChantEnd
begin
