procedure start
begin


	if Only_Once then begin
		set_self_team(TEAM_CATHEDRAL );
		set_self_ai( AI_BRAINWASHED_CHILDREN );
		Only_Once := 0;
	end
	if (script_action == look_at_proc) then begin// look_at_p_proc
		script_overrides;
		display_msg(message_str(SCRIPT_FRANCIS, 100));
	end
	else begin
		if (script_action == pickup_proc) then begin//<---caught stealing! (pickup_p_proc)
			tmp_hostile := 1;
		end
		else begin
			if (script_action == critter_proc) then begin//<-- critter_p_proc - (can also be "Critter_Action") - do they see you, should they wander, should they attack you, etc..
				if (tmp_hostile) then begin
					tmp_hostile := 0;
					attack(dude_obj);
				end
			end
			else begin
				if (script_action == destroy_proc) then begin//destroy_p_proc - Object or Critter has been killed or otherwise eradicated. Fall down go boom.
					call destroy_p_proc;
				end
				else begin
					if (script_action == talk_proc) then begin//<--- talk_p_proc (Face icon), can also call "do_dialogue" or "do_dialog"
						call talk_p_proc;
					end
				end
			end
		end
	end
end



procedure talk_p_proc
begin
	script_overrides;
	if (global_var( GVAR_CATHEDRAL_ENEMY ) == 1) then begin
		float_msg( self_obj, message_str(SCRIPT_FRANCIS, 101), FLOAT_MSG_NORMAL );
	end
	else begin
		if (local_var(0) == 1) then begin
			float_msg( self_obj, message_str(SCRIPT_FRANCIS, 102), FLOAT_MSG_NORMAL );
		end
		else begin

			if (dude_is_armed) then begin
				float_msg( self_obj, message_str(SCRIPT_FRANCIS, 103), FLOAT_MSG_NORMAL );
			end
			else begin
				if (not(dude_wearing_coc_robe) and (has_rep_berserker or has_rep_childkiller)) then begin
					float_msg( self_obj, message_str(SCRIPT_FRANCIS, 104), FLOAT_MSG_NORMAL );
				end
				else begin
					start_gdialog(399, self_obj, 4, -1, -1);
					gsay_start;
					if (not(dude_wearing_coc_robe)) then begin
						call Francis04;
					end
					else begin
						if dude_wearing_coc_robe then begin
							call Francis05;
						end
						else begin
							call Francis06;
						end
					end
					gsay_end;
					end_dialogue;
					set_local_var(0, 1);
				end
			end
		end
	end
end

