      Only_Once := 0;
      Cabbot_Ptr := self_obj;
      set_self_team(TEAM_BROTHERHOOD);
      set_self_ai(AI_BROTHERHOOD_KNIGHT);
   end
end

procedure damage_p_proc begin
   set_global_var(GVAR_ENEMY_BROTHERHOOD, 1);
end

procedure critter_p_proc begin
   if local_var(7) == 1 then begin
      set_local_var(7, 2);
      inc_general_rep(1);
      give_xp_msg(EXP_BECOME_INITITAT, mstr(232));
   end
   if (global_var(GVAR_ENEMY_BROTHERHOOD)) then begin
      tmp_hostile := 1;
   end
   if (tile_distance_objs(self_obj, dude_obj) > 12) then begin
      tmp_hostile := 0;
   end
   if (tmp_hostile) then begin
      set_global_var(GVAR_ENEMY_BROTHERHOOD, 1);
      tmp_hostile := 0;
      attack(dude_obj);
   end
   else begin
      if (local_var(5) == 0) then begin
         if joined_bos then begin
            add_timer_event(self_obj, game_ticks(1), 1);
         end
      end
      else begin
         if (local_var(5) == 1) then begin
            if (self_tile == 20706) then begin//20906) then begin
               set_local_var(5, 2);
               self_rotate(2);
            end
            else begin
               self_walk_to_tile(20706);//20906, 0);
            end
         end
      end
   end
end

procedure pickup_p_proc begin
   if (source_obj == dude_obj) then begin
      tmp_hostile := 1;
   end
end

procedure talk_p_proc begin
   set_tma_data(NAME, 1000, -1, -1, TMA_MSG_DONTKNOW_START, TMA_MSG_DONTKNOW_END);

   dude_look_at_self;
   if (global_var(GVAR_QUEST_BROHOOD_1_JOIN_THEM) == 5) then begin
      float_msg(self_obj, mstr(233), FLOAT_MSG_RED);
   end
   else begin
      get_reaction
      start_gdialog(NAME, self_obj, 4, HEAD_CABBOT, BACKGROUND_BHOOD);
      gsay_start;
      if (local_var(LVAR_Here_Before) == 1) then begin
         if (global_var(GVAR_QUEST_BROHOOD_1_JOIN_THEM) == 1) then begin
            call cabbot24;
         end
         else if joined_bos then begin
            call cabbot36;
         end
         else if (global_var(GVAR_WITH_CARAVAN) == 1) then begin // TODO : Wrong gvar???? Does this make sense here????
            call cabbot33;
         end
         else begin
            if (local_var(LVAR_reaction) >= BASE_REACTION) then begin // Was 50!
               call cabbot19;
            end
            else begin
               call cabbot21;
            end
         end
      end
      else begin
         call cabbot01;
      end
      gsay_end;
      end_dialogue;
   end
end

