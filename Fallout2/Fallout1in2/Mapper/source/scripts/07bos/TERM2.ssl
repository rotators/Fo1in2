   if (source_obj != Vree_ptr) then begin
      display_msg(message_str(SCRIPT_TERM, 101));
   end
   else begin
      float_msg(self_obj, message_str(SCRIPT_VREE, random(300, 308)), FLOAT_MSG_YELLOW);
   end
end

