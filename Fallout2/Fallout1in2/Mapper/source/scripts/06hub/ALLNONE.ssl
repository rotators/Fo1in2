/* Include Files */
#include "..\headers\define.h"
#include "..\headers\maps\hubdwntn.h"
#include "..\headers\sfall\main.h"

#define NAME                    SCRIPT_ALLNONE
#define TOWN_REP_VAR            (GVAR_TOWN_REP_HUB)

#include "..\headers\command.h"
