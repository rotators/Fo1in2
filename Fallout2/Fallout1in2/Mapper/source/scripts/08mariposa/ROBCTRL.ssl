procedure talk_p_proc begin
   dude_look_at_self;
   start_gdialog(368, self_obj, 4, -1, -1);
   gsay_start;

   if (local_var(0) == 1) then
      NMessage(101);
   else if (local_var(LVAR_Herebefore) == 1) then
      call Control14;
   else
      call Control00;

   gsay_end;
   end_dialogue;
end

procedure use_p_proc begin
   script_overrides;
