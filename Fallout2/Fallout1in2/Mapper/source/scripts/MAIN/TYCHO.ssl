// Fallout Fixt to prevent Tycho from slaughtering his homies
procedure combat_p_proc begin
   if fixt_enabled then begin
      if (global_var(GVAR_DUDE_ENEMY_JUNK_CITIZEN) > 0) or (global_var(GVAR_DUDE_ENEMY_JUNK_BOXER) > 0) or (global_var(GVAR_ENEMY_JUNKTOWN) > 0) then begin
         party_remove(self_obj);
         if (fixed_param == COMBAT_SUBTYPE_TURN) then begin
            attack(dude_obj);
            attack_setup(self_obj, dude_obj);
            party_remove(self_obj);
            call PlayerTraitor;
         end
         if (fixed_param == COMBAT_SUBTYPE_HIT_SUCCEEDED) then begin
            attack(dude_obj);
            attack_setup(self_obj, dude_obj);
            party_remove(self_obj);
         end
         attack_setup(self_obj, dude_obj);
         attack(dude_obj);
      end
   end
end

// Messages when attacking player (for player killing Junktown citizens)
procedure PlayerTraitor begin
   float_msg(self_obj, mstr(175 + random(0, 5)), FLOAT_MSG_RED);
end

procedure critter_p_proc begin
   if (global_var(GVAR_TYCHO_HIRELING_STATUS) < 2) then begin
      sleeping
   end
   else if (Tycho_In_Party) then begin
      party_member_follow_dude
   end
   else if (self_team == TEAM_PLAYER) then begin
      set_self_abandon_party;
   end

   if (tmp_hostile or is_junktown_enemy) then begin
      if (self_can_see_dude /*or self_can_hear_dude*/) then begin
         tmp_hostile := 0;
         set_self_abandon_party;
         attack(dude_obj);
      end
   end
   else begin
      //call map_commentary;
   end
end

procedure destroy_p_proc begin
