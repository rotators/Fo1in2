procedure map_enter_p_proc begin
	if shady_invaded and (global_var( GVAR_TANDI_HIRELING_STATUS ) != 5) then begin
		if CUR_AREA_SHADY_SANDS then begin //  SHADY SANDS - EAST OR WEST
			if (local_var(9) != 1) then begin
				set_local_var(9, 1);
				call PickDeadBodyType;
				kill_critter(self_obj, DeathType);
			end
		end
	end

	if (map_first_run) then begin
		if CUR_AREA_SHADY_SANDS then begin
			set_self_team( TEAM_SHADY_SANDS );
		end
		else begin
			set_self_team( TEAM_PLAYER );
		end
		set_self_ai( AI_TANDI ); // Was AI_CAREFUL
	end

	// Tandi is back home:
	if ((CUR_MAP_SHADYW) and (global_var( GVAR_TANDI_HIRELING_STATUS ) > 1)) then begin
		if ((global_var( GVAR_LOAD_MAP_INDEX ) == 2) and (global_var( GVAR_TANDI_LOCATION_TRACKER ) == 3)) then begin
			set_self_abandon_party;
			inc_shady_rep(REP_BONUS_TANDI_RESCUED);

			if not(is_loading_game) then begin    set_self_visible;    end//  MAKE VISIBLE
			critter_attempt_placement(self_obj, 22086, 0);
			set_global_var( GVAR_TANDI_LOCATION_TRACKER, 4 );
		end
		else begin
			if (global_var( GVAR_TANDI_LOCATION_TRACKER ) >= 300) then begin
				critter_attempt_placement(self_obj, 22086, 0);
				set_global_var( GVAR_TANDI_LOCATION_TRACKER, 4 );
			end
		end
	end

end

procedure critter_p_proc begin
	if (self_can_see_dude and global_var( GVAR_ENEMY_SHADY_SANDS ) and (global_var( GVAR_TANDI_LOCATION_TRACKER ) != 1)) then begin
		if (party_member_obj(TANDI_SELF_ID) != 0) then begin
			set_self_abandon_party;
		end
		attack(dude_obj);
	end
	else begin
		if (CUR_MAP_RAIDERS) then begin //  RAIDERS - KHANS
			if (tandi_is_kidnapped and (global_var( GVAR_TANDI_LOCATION_TRACKER ) == 1)) then begin
				set_self_abandon_party;
				if not(is_loading_game) then begin    set_self_visible;    end//  MAKE VISIBLE
				critter_attempt_placement(self_obj, 17905, 0);
				set_global_var( GVAR_TANDI_LOCATION_TRACKER, 2 );
			end
			else begin
				if ((global_var( GVAR_TANDI_HIRELING_STATUS ) == 5) and (global_var( GVAR_TANDI_LOCATION_TRACKER ) == 2)) then begin
					tandi_joins_party;
					set_global_var( GVAR_TANDI_LOCATION_TRACKER, 3 );
				end
			end
			if ((map_var(2) != 0) and (local_var(5) == 0)) then begin
				set_global_var( GVAR_TANDI_HIRELING_STATUS, 5 );
				set_local_var(5, 1);
				if (party_member_obj(TANDI_SELF_ID) == 0) then begin
					tandi_joins_party;
				end
			end
		end
		else begin
			if CUR_AREA_SHADY_SANDS then begin //  SHADY SANDS - EAST OR WEST
				if (global_var( GVAR_TANDI_HIRELING_STATUS ) > 1) then begin
					variable Temp_ptr := 0;
					Temp_ptr := create_object( PID_DEAD_TRAVELER, 0, 0 );// <-- Dead Traveler (Ghoul)  Was:  create_object( PID_IGUANA_STAND, 0, 0 );// <-- Bob's Iguana Stand. MAX_SIZE = 1000, biggest of all containers. -1 = NO SCRIPT ATTACHED.
					move_to(Temp_ptr, 0, 0);
					inven_unwield;
					move_obj_inven_to_obj(self_obj, Temp_ptr);
					move_obj_inven_to_obj(Temp_ptr, self_obj);
					destroy_object(Temp_ptr);
				end
				if (tandi_is_kidnapped and (global_var( GVAR_TANDI_LOCATION_TRACKER ) == 0)) then begin
					tandi_joins_party;
					if not(is_loading_game) then begin    set_self_invisible;    end
					set_global_var( GVAR_TANDI_LOCATION_TRACKER, 1 );
				end
				else begin
					if ((global_var( GVAR_TANDI_HIRELING_STATUS ) > 1) and (global_var( GVAR_TANDI_LOCATION_TRACKER ) == 3) and (CUR_MAP_SHADYW)) then begin
						set_self_abandon_party;
						if not(is_loading_game) then begin    set_self_visible;    end//  MAKE VISIBLE
						self_run_to_tile( 16710 );
						set_global_var( GVAR_TANDI_LOCATION_TRACKER, 300 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 300) and (tile_distance(self_tile, 16710) >= 2)) then begin
						self_run_to_tile( 16710 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 300) and (tile_distance(self_tile, 16710) < 2)) then begin
						set_global_var( GVAR_TANDI_LOCATION_TRACKER, 301 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 301) and (tile_distance(self_tile, 20706) >= 2)) then begin
						self_run_to_tile( 20706 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 301) and (tile_distance(self_tile, 20706) < 2)) then begin
						set_global_var( GVAR_TANDI_LOCATION_TRACKER, 302 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 302) and (tile_distance(self_tile, 23698) >= 2)) then begin
						self_run_to_tile( 23698 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 302) and (tile_distance(self_tile, 23698) < 2)) then begin
					set_global_var( GVAR_TANDI_LOCATION_TRACKER, 303 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 303) and (tile_distance(self_tile, 22086) >= 2)) then begin
					self_run_to_tile( 22086 );
					end
					else if ((global_var( GVAR_TANDI_LOCATION_TRACKER ) == 303) and (tile_distance(self_tile, 22086) < 2)) then begin
					set_global_var( GVAR_TANDI_LOCATION_TRACKER, 4 );
					end
				end
				if (self_can_see_dude and (party_member_obj(TANDI_SELF_ID) == 0) and tmp_hostile) then begin
					tmp_hostile := 0;
					attack(dude_obj);
				end
				if ((party_member_obj(TANDI_SELF_ID) == 0) and tandi_not_kidnapped and (global_var( GVAR_TANDI_LOCATION_TRACKER ) != 300)) then begin
					call TandiSchedule;
					if (random(1, 20) == 1) then begin
						self_walk_to_tile( tile_num_in_direction(self_tile, random(0, 5), random(2, 4)) );
					end
				end
			end
		end
	end
	if ((global_var( GVAR_TANDI_HIRELING_STATUS ) == 5) and (local_var(5) == 0)) then begin
		set_local_var(5, 1);
		if (party_member_obj(TANDI_SELF_ID) == 0) then begin
			tandi_joins_party;
		end
	end
	if ((party_member_obj(TANDI_SELF_ID) != 0) and (cur_map_index != MAP_SHADYW) and (cur_map_index != MAP_SHADYE)) then begin
		if (tile_distance_objs(self_obj, dude_obj) >= (1.5 * 2)) then begin
			self_run_to_tile( tile_num_in_direction(dude_tile, random(0, 5), 1) );
		end
		else begin
			if (tile_distance_objs(self_obj, dude_obj) >= 2) then begin
				self_walk_to_tile( tile_num_in_direction(dude_tile, random(0, 5), 1) );
			end
		end
	end
	else begin
		if ((global_var( GVAR_TANDI_HIRELING_STATUS ) > 1) and (CUR_MAP_SHADYE)) then begin
			if (self_tile != 14950) then begin
				self_run_to_tile( 14950 );
			end
			else begin
				if not(is_loading_game) then begin    set_self_invisible;    end
			end
		end
	end
end

