procedure map_enter_p_proc begin
	variable LVar0 := 0;
	set_global_var(GVAR_MARK_LA_5, 1);

	if (dude_elevation == 1) then
		Darkness;
	else
		Lighting;

	if not(is_loading_game) then begin
		if ((map_var(MVAR_IsMommyDead) == 0) and (((game_time / 10) - global_var(GVAR_WATER_CHIP_13)) > (60 * 60))) then begin
			set_global_var(GVAR_WATER_CHIP_13, game_time / 10);

			if (map_var(MVAR_RoamingCount) == 0) then begin
				LVar0 := random(2, 3);
				set_map_var(MVAR_RoamingCount, LVar0);
				set_map_var(MVAR_NewCount, LVar0);
				call PlaceCritter;
			end
			else if (map_var(MVAR_RoamingCount) == 1) then begin
				LVar0 := random(1, 2);
				set_map_var(MVAR_RoamingCount, LVar0 + 1);
				set_map_var(MVAR_NewCount, LVar0);
				call PlaceCritter;
			end
			else if (map_var(MVAR_RoamingCount) == 2) then begin
				if (random(0, 1)) then begin
					set_map_var(MVAR_RoamingCount, 3);
					set_map_var(MVAR_NewCount, 1);
					call PlaceCritter;
				end
			end

		end
	end

	override_map_start(96, 121, 0, 0);

	set_global_var(GVAR_LOAD_MAP_INDEX, 0);
end

procedure map_update_p_proc begin
	if (dude_elevation == 1) then
		Darkness;
	else
		Lighting;
end

procedure map_exit_p_proc begin
	if ((map_var(MVAR_IsMommyDead) == 1) and (map_var(MVAR_RoamingCount) == 0) and (map_var(MVAR_EggCount) == 0)) then begin
		if (global_var(GVAR_WATER_CHIP_8) != 2) then begin
			set_all_deathclaws_killed;
		end
	end
end

procedure PlaceCritter begin
	variable LVar0 := 0;
	variable LVar1 := 0;
	variable LVar2 := 0;
	variable LVar3 := 0;
	LVar3 := map_var(MVAR_NewCount);
	while(LVar3 > 0) do begin
		LVar2 := random(1, 7);
		if (LVar2 == 1) then begin
			LVar1 := 16890;
		end
		else if (LVar2 == 2) then begin
			LVar1 := 17269;
		end
		else if (LVar2 == 3) then begin
			LVar1 := 23492;
		end
		else if (LVar2 == 4) then begin
			LVar1 := 15885;
		end
		else if (LVar2 == 5) then begin
			LVar1 := 12287;
		end
		else if (LVar2 == 6) then begin
			LVar1 := 17511;
		end
		else if (LVar2 == 7) then begin
			LVar1 := 15475;
		end
		LVar0 := create_object_sid(PID_DEATHCLAW, 0, 0, SCRIPT_ROAMCLAW);
		critter_attempt_placement(LVar0, LVar1, 0);
		LVar3 := LVar3 - 1;
	end
end
