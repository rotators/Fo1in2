procedure map_enter_p_proc begin
   set_global_var(GVAR_MARK_HUB_2, 1);
   if (dude_elevation == 1) then begin
      Darkness;
   end
   else begin
      Lighting;
   end
   call Invasion;
   set_global_var(GVAR_LOAD_MAP_INDEX, 0);
end

procedure map_update_p_proc begin
   if (dude_elevation == 1) then begin
      Darkness;
   end
   else begin
      Lighting;
   end
   if ((combat_is_initialized == 0) and (global_var(GVAR_UNDERGROUND_STATUS) == 1) and (map_var(52) == 1) and not(is_loading_game)) then begin
      set_map_var(52, 0);
      set_map_var(53, 1);

      gfade_out(1);
      if not(is_loading_game) then begin  set_obj_invisible(Fry_Stub_Ptr); end
      if (global_var(GVAR_GREENE_DEAD) != 1) then begin
         move_to(Justin_Ptr, 24064, 0);
         set_team(Justin_Ptr, TEAM_67);
      end
      move_to(dude_obj, 24267, 0);
      if (global_var(GVAR_GREENE_DEAD) != 1) then begin
         obj_rotate(Justin_Ptr, rotation_to_tile(tile_num(Justin_Ptr), dude_tile));
         dude_rotate(rotation_to_tile(dude_tile, tile_num(Justin_Ptr)));
      end
      gfade_in(1);
   end
end

procedure map_exit_p_proc begin
   if map_var(MVAR_Fixt_IRWIN_CLOCK_ROLLBACK) == 1 then begin
      set_map_var(MVAR_Fixt_IRWIN_CLOCK_ROLLBACK, 0);
      //game_time_advance((0 - (ONE_GAME_DAY * 6)));
   end
end

