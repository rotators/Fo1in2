#include "define.h"

procedure start;
procedure appear;


procedure start begin
   if (script_action != use_proc) then begin//     *NOT* use_p_proc Action
      if necropolis_invaded then begin
         call appear;
      end
      else begin
         script_overrides;
         if not(is_loading_game) then begin
            set_self_invisible;
         end
      end
   end
end

procedure appear begin
   if not(is_loading_game) then begin
      set_self_visible;
   end//  MAKE VISIBLE
end
