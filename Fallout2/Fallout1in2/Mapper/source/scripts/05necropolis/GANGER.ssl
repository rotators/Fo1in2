procedure talk_p_proc begin
   dude_look_at_self;
   start_gdialog(64, self_obj, 4, -1, -1);
   gsay_start;
   if (local_var(0)) then begin
      call ghoul08;
   end
   else begin
      set_local_var(0, 1);
      call ghoul00;
   end
   gsay_end;
   end_dialogue;
end

