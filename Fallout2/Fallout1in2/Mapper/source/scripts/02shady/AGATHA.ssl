variable initial := 0;
variable KillBox_ptr := 0;

procedure start begin
   if fixt_disabled then begin
      destroy_object(self_obj);
   end
   else begin
      if global_var(GVAR_AGATHA_IS_ENABLED) == 0 then begin
         destroy_object(self_obj);
      end
   end

   if not(initial) then begin
      initial := 1;
      set_self_team(TEAM_SHADY_SANDS);
   end
end

procedure map_enter_p_proc begin
   if shady_invaded then begin
      invasion_kill_critter;
   end
end

procedure description_p_proc begin
   if (is_success(do_check(dude_obj, STAT_pe,  dude_perk(PERK_bonus_awareness)))) then begin
      script_overrides;
      display_msg(mstr(102));
   end
end

procedure destroy_p_proc begin
   inc_good_critter
end

procedure look_at_p_proc begin
   script_overrides;
   if (global_var(GVAR_AGATHA_4_ONCE)) then begin
      display_msg(mstr(101));
   end
   else begin
      display_msg(mstr(100));
   end
end

procedure talk_p_proc begin
   dude_look_at_self;
   start_gdialog(663, self_obj, 4, -1, -1);
   gsay_start;
   if (global_var(GVAR_AGATHA_4_ONCE)) then begin
      if ((game_time_hour >= 1900) or (game_time_hour < 600)) then begin
         call Agatha14;
      end
      else begin
         call Agatha16;
      end
   end
   else begin
      set_global_var(GVAR_AGATHA_4_ONCE, 1);
      call Agatha08;
   end
   gsay_end;
   end_dialogue;
end

