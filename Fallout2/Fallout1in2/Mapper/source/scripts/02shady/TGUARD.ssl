procedure set_sleep_tile begin
   if (home_tile == 15283) then begin
      sleep_tile := 14685;
   end
   else if (home_tile == 15886) then begin
      sleep_tile := 14479;
   end
   else if (home_tile == 15881) then begin
      sleep_tile := 15479;
   end
   wake_time := random(610, 650);
   sleep_time := random(2110, 2150);
end

