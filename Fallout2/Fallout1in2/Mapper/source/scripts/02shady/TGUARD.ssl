procedure talk_p_proc begin
   if (has_rep_berserker) then begin
      set_global_var(GVAR_BERSERKER_REPUTATION, 1);
      set_global_var(GVAR_CHAMPION_REPUTATION, 0);
   end
   get_reaction
   if (local_var(9) == 1) then begin
      float_msg(self_obj, message_str(SCRIPT_GENVAULT, 166), FLOAT_MSG_NORMAL);
   end
   else begin
      if global_var(GVAR_ENEMY_SHADY_SANDS) then begin
         set_local_var(4, 1);
         call guard00;
      end
      else if tandi_is_kidnapped then begin
         set_local_var(4, 1);
         call guard01;
      end
      else if (get_tandi_returned and (local_var(8) == 0)) then begin
         set_local_var(4, 1);
         call guard02;
      end
      else if not(is_tandi_alive) then begin
         set_local_var(4, 1);
         call guard03;
      end
      else if (local_var(4) == 1) then begin
         if (local_var(1) < 2) then begin
            call guard13;
         end
         else begin
            call guard12;
         end
      end
      else begin
         set_local_var(4, 1);
         if (local_var(1) < 2) then begin
            call guard10;
         end
         else begin
            start_gdialog(113, self_obj, 4, -1, -1);
            gsay_start;
            call guard04;
            gsay_end;
            end_dialogue;
         end
      end
   end
end

procedure timed_event_p_proc begin
   if (dude_is_armed) then begin
      tmp_hostile := 1;
   end
   else begin
      set_map_var(MVAR_WARNED, 0);
   end
end

