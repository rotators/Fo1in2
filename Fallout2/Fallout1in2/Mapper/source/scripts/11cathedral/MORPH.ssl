procedure start begin
   if Only_Once then begin
      Only_Once := 0;
      if (CUR_MAP_CHILDRN2) then begin //  CATHEDRAL - LEVEL 2 AND HIGHER
         set_self_team(TEAM_CATHEDRAL);
      end
      else begin
         set_self_team(TEAM_MASTER_LAIR);
      end
      set_self_ai(AI_COC_MORPHEUS);
   end
end

