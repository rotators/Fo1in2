procedure timed_event_p_proc begin
   if (fixed_param == 1) then begin
      moving := 1;
      set_global_var(GVAR_MASTER_FILLER_5, 0);
      if (local_var(1) == 0) then begin
         move_to(self_obj, home_tile, 0);
         set_local_var(3, 7);
         set_local_var(4, 12098);
         if not(is_loading_game) then set_self_visible;
      end
   end
   else if (fixed_param == 2) then begin
      set_local_var(2, 2);
   end
   else if (fixed_param == 3) then begin
      moving := 1;
      set_local_var(4, 19685);
      set_local_var(3, 4);
      set_local_var(1, 0);
      self_walk_to_tile(local_var(4));
   end
end

procedure critter_p_proc begin
   set_map_var(1, 0);
   if (tile_distance_objs(dude_obj, self_obj) < 8) then begin
      set_map_var(1, 1);
   end
   if (tmp_hostile) then begin
      tmp_hostile := 0;
      attack(dude_obj);
   end
   if (moving) then begin
      my_hex := self_tile;
      if (my_hex == local_var(4)) then begin
         if (local_var(1)) then
            set_local_var(3, local_var(3) + 1);
         else
            set_local_var(3, local_var(3) - 1);

         if (local_var(3) > 7) then begin
            moving := 0;
            set_local_var(1, 0);
            set_local_var(3, 6);
            if not(is_loading_game) then set_self_invisible;
            set_global_var(GVAR_MASTER_FILLER_5, 1);
            move_to(self_obj, 7000, 0);
            add_timer_event(self_obj, game_ticks(300), 1);
         end
         else if (local_var(3) < 0) then begin
            moving := 0;
            set_local_var(1, 1);
            set_local_var(3, 1);
            add_timer_event(self_obj, game_ticks(300), 1);
         end
         else if ((local_var(3) == 5) and (local_var(1) == 0)) then begin
            moving := 0;
            add_timer_event(self_obj, game_ticks(60), 3);
         end

         if (local_var(3) == 0) then begin
            set_local_var(4, 20936);
         end
         else if (local_var(3) == 1) then begin
            set_local_var(4, 25336);
         end
         else if (local_var(3) == 2) then begin
            set_local_var(4, 25721);
         end
         else if (local_var(3) == 3) then begin
            set_local_var(4, 27915);
         end
         else if (local_var(3) == 4) then begin
            set_local_var(4, 26094);
         end
         else if (local_var(3) == 5) then begin
            set_local_var(4, 19685);
         end
         else if (local_var(3) == 6) then begin
            if (local_var(1) == 0) then begin
               set_local_var(4, 12889);
            end
            else begin
               set_local_var(4, 14689);
            end
         end
         else if (local_var(3) == 7) then begin
            set_local_var(4, 12098);
         end
      end
      else begin
         self_walk_to_tile(local_var(4));
      end
      if (self_can_see_dude) then begin
         coc_disguise_check;
         if (not(DISGUISED) and (again < 2)) then begin
            if (tile_distance_objs(self_obj, dude_obj) < 6) then begin
               if (local_var(2) < 1) then begin
                  set_local_var(2, 1);
                  add_timer_event(self_obj, game_ticks(15), 2);
                  dialogue_system_enter;
               end
               else if (local_var(2) > 1) then begin
                  call jerem29;
               end
            end
         end
      end
   end
end

