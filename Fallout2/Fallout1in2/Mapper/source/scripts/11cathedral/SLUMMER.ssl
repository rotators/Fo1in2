   dude_look_at_self;
   get_reaction

   start_dialog(self_obj, 4);
   gsay_start;
   if dude_wearing_coc_robe then begin
      if (local_var(4) == 0) then begin
         if (dude_is_armed) then begin
            call slummer02;
         end
         else begin
            call slummer03;
         end
      end
      else begin
         set_local_var(4, 1);
         call slummer01;
      end
   end
   else begin
      set_local_var(4, 1);
      if (global_var(GVAR_CATHEDRAL_ENEMY) == 1) then begin
         call slummer00;
      end
      else if (dude_is_armed) then begin
         if (has_rep_champion) then begin
            call slummer04;
         end
         else begin
            if (has_rep_childkiller or (has_rep_berserker)) then begin
               call slummer06;
            end
            else begin
               call slummer05;
            end
         end
      end
      else if (has_rep_champion) then begin
         call slummer07;
      end
      else if (has_rep_childkiller or (has_rep_berserker)) then begin
         call slummer09;
      end
      else begin
         call slummer08;
      end
   end
   gsay_end;
   end_dialogue;
end

